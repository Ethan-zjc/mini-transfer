.login-success-pop {
  position: fixed;
  left: 0;
  top: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 99;
}

.login-success-pop .content {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  padding: 56rpx 122rpx 0;
  width: 630rpx;
  height: 470rpx;
  box-sizing: border-box;
}

.login-success-pop .content .close {
  position: absolute;
  top: -82rpx;
  right: 0;
  width: 44rpx;
  height: 44rpx;
}

.login-success-pop .content .title {
  height: 26rpx;
  line-height: 26rpx;
  text-align: center;
  font-size: 28rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 800;
  color: #FEFEFE;
}

.login-success-pop .content .process {
  padding-top: 13rpx;
  height: 14rpx;
  line-height: 14rpx;
  text-align: center;
  font-size: 18rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 800;
  color: #FF973A;
}

.login-success-pop .content .awards {
  margin-top: 28rpx;
  padding: 0 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
}

.login-success-pop .content .awards .handler {
  width: 32rpx;
  height: 56rpx;
}

.login-success-pop .content .awards .image-box {
  background-color: #146CFF;
  width: 209rpx;
  height: 218rpx;
  border: 2rpx solid #146CFF;
}

.login-success-pop .content .awards .image-box image {
  width: 100%;
  height: 100%;
}

.login-success-pop .content .award-name {
  padding: 0 110rpx;
  height: 40rpx;
  line-height: 20rpx;
  margin-top: 10rpx;
  text-align: center;
  font-size: 20rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: bold;
  color: #FFFFFF;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.login-success-pop .content .button {
  margin: 24rpx auto;
  width: 292rpx;
  height: 112rpx;
  line-height: 112rpx;
  text-align: center;
  font-size: 40rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 800;
  color: #26FFFC;
}
