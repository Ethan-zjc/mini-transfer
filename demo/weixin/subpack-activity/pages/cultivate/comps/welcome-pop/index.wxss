.welcome-pop {
  position: fixed;
  left: 0;
  top: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 99;
}

.welcome-pop .content-box {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.welcome-pop .content-box .title {
  margin: 0 auto;
  width: 536rpx;
  height: 52rpx;
}

.welcome-pop .content-box .content {
  margin-top: 23rpx;
  padding-top: 81rpx;
  width: 630rpx;
  height: 412rpx;
  box-sizing: border-box;
}

.welcome-pop .content-box .content .fire {
  margin: 0 auto;
  width: 124rpx;
  height: 146rpx;
}

.welcome-pop .content-box .content .fire-text {
  margin: 28rpx auto 47rpx;
  width: 288rpx;
  height: 54rpx;
  line-height: 54rpx;
  text-align: center;
  font-size: 30rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: bold;
  color: #FFFFFF;
}

.welcome-pop .content-box .content .fire-text text {
  color: #FF973A;
}

.welcome-pop .content-box .content .button {
  margin: 0 auto;
  width: 289rpx;
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
  font-size: 40rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 800;
  color: #26FFFC;
}
