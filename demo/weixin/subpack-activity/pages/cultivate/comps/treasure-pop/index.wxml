<view class="treasure-pop">
    <view class="content" style="background-image: url({{ cultivateImgs['pop-ups-background2'] }});background-size: 100% 100%; background-repeat: no-repeat;">
        <image 
            class="close" 
            mode="widthFix" 
            src="{{ cultivateImgs['close'] }}" 
            catchtap="onClose">
        </image>
        <view class="title">{{ awardTextData.title }}</view>
        <view class="desc">{{ awardTextData.desc }}</view>
        <view class="awards">
            <view wx:for="{{ awardList }}" class="item" wx:key="index" style="margin-right: {{ (index+1)%3 ? '28rpx' : '0rpx' }}">
                <view wx:if="{{ item.firstAwardIndex }}" class="bubble">
                    前{{ item.firstAwardIndex }}名
                </view>
                <view class="image-box">
                    <image src="{{ item.award_icon }}"></image>
                </view>
                <view class="name">
                    {{ item.award_title }}
                </view>
            </view> 
        </view>
        <view 
            class="button" 
            style="background-image: url({{ cultivateImgs['button-background'] }});background-size: 100% 100%; background-repeat: no-repeat;" 
            catchtap="onClose">
            继续启程
        </view>
    </view>
</view>
  