.dialog-succ {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 99;
  background: rgba(0, 0, 0, 0.9);
}

.dialog-succ .succ-wrap {
  width: 750rpx;
  position: absolute;
  left: 0;
  top: 45%;
  transform: translateY(-50%);
}

.dialog-succ .succ-title {
  width: 100%;
  line-height: 100rpx;
  text-align: center;
  font-size: 50rpx;
  font-family: PingFang SC;
  font-weight: 600;
  color: #FFFFFF;
}

.dialog-succ .succ-info {
  width: 426rpx;
  height: 426rpx;
  margin: 0 auto;
  position: relative;
}

.dialog-succ .succ-bg {
  position: relative;
  z-index: 1;
  width: 100%;
  height: 100%;
}

.dialog-succ .succ-award {
  position: absolute;
  left: 0;
  top: 72rpx;
  z-index: 3;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.dialog-succ .succ-award-icon {
  width: 172rpx;
  height: 172rpx;
}

.dialog-succ .succ-award-icon image {
  width: 100%;
  height: 100%;
}

.dialog-succ .succ-award-title {
  width: 280rpx;
  height: 74rpx;
  line-height: 74rpx;
  background: #FFFFFF;
  border: 4rpx solid #2D3631;
  border-radius: 37rpx;
  font-size: 46rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #2D3631;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: 16rpx;
}

.dialog-succ .succ-button {
  width: 100%;
  height: 84rpx;
  margin-top: 34rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.dialog-succ .succ-close {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 252rpx;
  height: 84rpx;
  margin: 0 16rpx;
  text-indent: -200%;
  overflow: hidden;
}

.dialog-succ .succ-close image {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
}

.dialog-succ .succ-close text {
  position: relative;
  z-index: 3;
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: 600;
  color: #734132;
  display: none;
}
