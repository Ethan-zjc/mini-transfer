@charset "UTF-8";
.navigation {
  position: sticky;
  position: -webkit-sticky;
  left: 0;
  top: 0;
  width: 100%;
  z-index: 9999;
}

.topic-page {
  width: 100%;
  height: 100%;
  position: relative;
}

.scrollView {
  width: 100%;
  height: 100%;
  position: relative;
}

.custom-header {
  position: fixed;
  top: 0;
  z-index: 99999;
  background: #fff;
}

.new {
  padding-bottom: 144rpx;
}

.new.ipxBottom {
  padding-bottom: 220rpx;
}

.new .top-img {
  width: 100%;
  height: 455rpx;
  position: relative;
}

.new .top-img .super {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 280rpx;
  background: linear-gradient(180deg, transparent 0%, rgba(0, 0, 0, 0.5) 100%);
  filter: blur(0px);
}

.new .top-img .super .contain {
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 24rpx;
  box-sizing: border-box;
  max-height: 280rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.new .top-img .super .left {
  flex: 1;
  flex-wrap: nowrap;
  overflow: hidden;
  padding-right: 24rpx;
  box-sizing: border-box;
}

.new .top-img .super .left .title {
  font-size: 36rpx;
  color: #fff;
  line-height: 50rpx;
  font-weight: 500;
}

.new .top-img .super .left .desc {
  height: 38rpx;
  margin-top: 12rpx;
}

.new .top-img .super .left .txt {
  line-height: 38rpx;
  font-size: 26rpx;
  font-family: DINAlternate-Bold, DINAlternate;
  font-weight: bold;
  color: #ffffff;
  display: inline-block;
  vertical-align: top;
}

.new .top-img .super .left .txt:nth-of-type(1)::after, .new .top-img .super .left .txt:nth-of-type(2)::after {
  content: "";
  display: inline-block;
  width: 2rpx;
  height: 16rpx;
  text-align: center;
  margin: 0 16rpx;
  background: rgba(255, 255, 255, 0.6);
}

.new .top-img .super .right {
  width: 114rpx;
  height: 100%;
  display: flex;
  align-items: center;
}

.new .top-img .super .right .follow {
  width: 114rpx;
  height: 54rpx;
  line-height: 54rpx;
  text-align: center;
  border-radius: 52rpx;
  font-size: 26rpx;
  background: #fde23d;
  font-weight: bold;
  color: #442509;
}

.new .top-img .super .right .followed {
  background: rgba(255, 255, 255, 0.3);
  border-radius: 28rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.8);
}

.new .activity {
  margin-bottom: 24rpx;
  width: 100%;
  height: 72rpx;
  background: #f7f9fa;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.new .activity .left-view {
  display: flex;
  align-items: center;
}

.new .activity .left-view .info-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.new .activity .left-view .txt {
  font-size: 26rpx;
  color: #333333;
  line-height: 40rpx;
  flex: 1;
  height: 40rpx;
  overflow: hidden;
}

.new .activity .arrow {
  width: 24rpx;
  height: 24rpx;
}

.new .topic-banner {
  margin-top: 24rpx;
  height: 122rpx;
  border-radius: 16rpx;
  padding: 0 24rpx;
}

.new .topic-banner .image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

.new-about {
  padding: 32rpx 24rpx;
  box-sizing: border-box;
}

.new-about .lables {
  width: 100%;
  max-height: 40rpx;
  margin-bottom: 24rpx;
  white-space: nowrap;
  overflow-x: scroll;
}

.new-about .lables text {
  vertical-align: top;
  box-sizing: border-box;
  padding: 0rpx 16rpx;
  width: auto;
  font-size: 24rpx;
  line-height: 41rpx;
  background: #f5f5f5;
  color: #333;
  margin-right: 16rpx;
  text-align: center;
  border-radius: 22rpx;
  display: inline-block;
}

.new-about .body {
  font-size: 26rpx;
  color: #333333;
  line-height: 42rpx;
  text-align: justify;
  position: relative;
}

.new-about .body text {
  display: block;
  overflow: hidden;
}

.new-about .body .expand {
  max-height: 84rpx;
}

.new-about .body .expand::after {
  content: "更多";
  position: absolute;
  bottom: 0rpx;
  right: 0;
  width: 120rpx;
  display: block;
  font-size: 26rpx;
  color: #999;
  height: 42rpx;
  line-height: 42rpx;
  text-align: right;
  background: -webkit-gradient(linear, left top, right top, from(rgba(255, 255, 255, 0)), to(white), color-stop(0.45, #fff));
}

.new-about .author {
  margin-top: 16rpx;
  height: 40rpx;
  overflow: hidden;
}

.new-about .author .author-list {
  width: 100%;
  height: 52rpx;
  white-space: nowrap;
}

.new-about .author .single {
  display: inline-block;
  margin-right: 40rpx;
}

.new-about .author .avatar {
  margin-right: 12rpx;
  display: inline-block;
  vertical-align: top;
}

.new-about .author .name {
  font-size: 26rpx;
  color: #999;
  line-height: 40rpx;
  display: inline-block;
  vertical-align: top;
}

.new .anthology {
  width: 100%;
  margin: 24rpx 0;
}

.new .anthology .intro {
  padding: 24rpx;
  height: 138rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.new .anthology .left {
  flex: 1;
  max-width: 550rpx;
}

.new .anthology .left .title {
  display: flex;
  align-items: center;
  height: 50rpx;
}

.new .anthology .left .title .name {
  font-size: 36rpx;
  font-weight: 500;
  color: #333333;
  line-height: 50rpx;
}

.new .anthology .left .title .batchBuy {
  background: #ffe120;
  border-radius: 20rpx;
  display: inline-block;
  width: 98rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 22rpx;
  color: #222222;
  text-align: center;
  margin-left: 8rpx;
}

.new .anthology .left .update {
  font-size: 28rpx;
  color: #999;
  line-height: 40rpx;
  overflow: hidden;
  width: 100%;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.new .anthology .left .update .day::after {
  content: "·";
  display: inline-block;
  width: 14rpx;
  height: 40rpx;
  text-align: center;
  margin: 0 8rpx;
}

.new .anthology .right {
  width: 136rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.new .anthology .right .more-text {
  font-size: 26rpx;
  color: #999;
}

.new .anthology .right .more-icon {
  width: 24rpx;
  height: 24rpx;
}

.new .anthology .topic-list {
  height: 278rpx;
  overflow: hidden;
}

.new .anthology .scroll {
  white-space: nowrap;
  height: 294rpx;
}

.new .anthology .scroll .more {
  padding: 24rpx 20rpx;
  background: #f2f2f2;
  border-radius: 12rpx;
  display: inline-block;
  max-width: 180rpx;
  box-sizing: border-box;
  vertical-align: top;
}

.new .anthology .scroll .more .more-icon {
  width: 24rpx;
  height: 24rpx;
  margin-bottom: 4rpx;
}

.new .anthology .scroll .more .txt {
  width: 26rpx;
  display: inline-block;
  white-space: normal;
  word-wrap: break-word;
  font-size: 22rpx;
  color: #999;
  line-height: 26rpx;
  text-align: center;
}

.new .anthology .scroll .more.befor {
  margin-left: 24rpx;
}

.new .anthology .scroll .more.befor .more-icon {
  transform: rotate(180deg);
}

.new .anthology .scroll .more.after {
  margin-right: 24rpx;
}

.new .anthology .scroll .single {
  display: inline-block;
  margin-right: 16rpx;
}

.new .anthology .scroll .single.has-first {
  margin-left: 16rpx;
}

.new .anthology .scroll .single.no-first {
  margin-left: 24rpx;
}

.new .anthology .scroll .single .img {
  border-radius: 12rpx;
  position: relative;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.new .anthology .scroll .single .img .place {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.new .anthology .scroll .single .img .shadow {
  background: rgba(255, 255, 255, 0.6);
}

.new .anthology .scroll .single .img .forbidden.lock-off .icon {
  position: absolute;
  width: 56rpx;
  height: 56rpx;
  left: 16rpx;
  top: 0;
}

.new .anthology .scroll .single .img .forbidden.lock-on {
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
}

.new .anthology .scroll .single .img .forbidden.lock-on .icon {
  width: 38rpx;
  height: 38rpx;
}

.new .anthology .scroll .single .img .sign {
  position: absolute;
  left: 20rpx;
  top: 0;
  width: 44rpx;
  height: 44rpx;
  z-index: 10;
}

.new .anthology .scroll .single .title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  line-height: 42rpx;
  display: inline-block;
  max-width: 320rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.new .anthology .no-list {
  display: flex;
  align-items: center;
  justify-content: center;
}

.new .anthology .no-list .img {
  width: 326rpx;
  height: 254rpx;
}

.fixed-base-new {
  width: 750rpx;
  height: 96rpx;
  position: fixed;
  bottom: 0;
  box-sizing: border-box;
  transition: transform 0.6s;
  z-index: 10;
  background: #ffffff;
  border-top: 1px solid #eaeef0;
}

.fixed-base-new.isIpx {
  height: 152rpx;
}

.fixed-base-new .infos {
  display: flex;
  justify-items: flex-start;
  height: 96rpx;
}

.fixed-base-new .infos .title {
  flex: 1;
  padding: 0 48rpx 0rpx 24rpx;
  box-sizing: border-box;
  color: #999999;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 96rpx;
}

.fixed-base-new .infos .btn {
  width: 264rpx;
  line-height: 96rpx;
  background: #fce23d;
  text-align: center;
  font-size: 30rpx;
  font-weight: 500;
  color: #442509;
}

.countdown-number {
  text-align: center;
  font-size: 24rpx;
  color: #ff5058;
}

.countdown-space-first::before,
.countdown-space-second::before,
.countdown-space-third::before {
  font-size: 24rpx;
  color: #ff5058;
  content: ":";
}
