.video-banner {
  width: 100%;
  height: 800rpx;
  position: relative;
}

.video-banner .video-swiper {
  width: 100%;
  height: 100%;
}

.video-banner .video-swiper-item {
  background: #000;
}

.video-banner .video-swiper .video {
  height: 100%;
  width: 100%;
}

.video-banner .video-swiper .video-cover {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
}

.video-banner .video-swiper .loading {
  width: 216rpx;
  height: 216rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  z-index: 3;
  border-radius: 16rpx;
  transform: translate(-50%, -50%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.video-banner .video-swiper .loading .dot {
  width: 60rpx;
  height: 60rpx;
}

.video-banner .mask {
  position: absolute;
  width: 750rpx;
  height: 800rpx;
  top: 0;
  left: 0;
  z-index: 3;
  background: linear-gradient(180deg, transparent 0%, rgba(0, 0, 0, 0.5) 100%);
}

.video-banner .mask .video-info {
  position: absolute;
  left: 24rpx;
  top: 652rpx;
  color: #ffffff;
}

.video-banner .mask .video-info .video-title {
  height: 44rpx;
  display: flex;
  align-items: center;
}

.video-banner .mask .video-info .video-title-text {
  font-weight: 500;
  font-size: 36rpx;
  line-height: 44rpx;
  max-width: 550rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.video-banner .mask .video-info .video-title-icon {
  background: #FFE120;
  border-radius: 6rpx;
  height: 32rpx;
  font-family: 'PingFang SC';
  font-style: normal;
  font-weight: 500;
  font-size: 20rpx;
  color: #222222;
  padding: 0 8rpx;
  margin-left: 8rpx;
  display: flex;
  align-items: center;
}

.video-banner .mask .video-info .video-desc {
  max-width: 550rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-top: 16rpx;
  font-weight: 400;
  font-size: 30rpx;
  line-height: 36rpx;
}

.video-banner .swiper-pagination {
  position: absolute;
  left: 24rpx;
  bottom: 28rpx;
  display: flex;
  justify-content: flex-end;
}

.video-banner .swiper-pagination .swiper-pagination-dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  margin-right: 8rpx;
}

.video-banner .swiper-pagination .active {
  background: rgba(255, 255, 255, 0.8);
}

.video-banner .video-operation {
  position: absolute;
  right: 24rpx;
  bottom: 46rpx;
  display: flex;
  align-items: center;
}

.video-banner .video-operation .video-mute {
  margin-right: 43rpx;
  width: 48rpx;
  height: 48rpx;
}

.video-banner .video-operation .video-mute image {
  width: 48rpx;
  height: 48rpx;
}

.video-banner .video-operation .video-sound {
  margin-right: 43rpx;
  width: 48rpx;
  height: 48rpx;
}

.video-banner .video-operation .video-full {
  width: 48rpx;
  height: 48rpx;
}

.video-banner .video-operation .video-full image {
  width: 48rpx;
  height: 48rpx;
}

.ui-loading {
  display: inline-block;
  margin: 0 10rpx;
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  vertical-align: middle;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

@keyframes weuiLoading {
  0% {
    transform: rotate3d(0, 0, 1, 0deg);
  }
  100% {
    transform: rotate3d(0, 0, 1, 360deg);
  }
}
