page {
  height: 100%;
}

.wrap {
  background: #F7F9FA;
  min-height: 100%;
}

.container {
  color: #442509;
}

.recommend-mandate {
  height: 230rpx;
  background: #F7F9FA;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  font-size: 28rpx;
}

.recommend-mandate .tip {
  color: #999999;
  line-height: 34rpx;
  font-weight: bold;
}

.recommend-mandate .btn {
  width: 220rpx;
  background: #FDE23D;
  height: 60rpx;
  border-radius: 30rpx;
  overflow: hidden;
  color: #333333;
  font-weight: 500;
  text-align: center;
  margin-top: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.recommend-mandate .btn-hover {
  opacity: .7;
}

.recommend-comic {
  width: 100%;
  height: 653rpx;
  display: block;
}

.feed-top {
  position: -webkit-sticky;
  position: sticky;
  top: 0px;
  z-index: 2000;
  width: 100%;
}

.feed-search {
  position: relative;
  z-index: 89;
  background: #fff;
}

.feed-search-active {
  background: none;
}

.feed-toptips {
  position: absolute;
  top: 0px;
  width: 100%;
  z-index: 88;
  height: 50px;
  padding-top: 16rpx;
}

.feed-toptips-content {
  transform: translateY(0);
  opacity: 0;
  text-align: center;
  position: absolute;
  left: 16rpx;
  right: 16rpx;
  bottom: 0px;
  padding: 16rpx;
  border-radius: 6rpx;
  -webkit-border-radius: 6rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.4;
  word-wrap: break-word;
  word-break: break-all;
  -webkit-transition: all .4s ease-in-out;
  transition: all .4s ease-in-out;
  background-color: rgba(0, 0, 0, 0.65);
  font-size: 22rpx;
}

.feed-toptips-active {
  transform: translateY(100%);
  opacity: 1;
}
