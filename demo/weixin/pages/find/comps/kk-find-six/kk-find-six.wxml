<view class="six-topics {{ !list.show_more ? 'no-pd-4':''}}">
    <view class="find-common-title">{{ list.title }}</view>
    <view class="topics-list" data-h="298" data-w="224" data-name="find-six-topics">
        <block wx:for="{{list.banner_list}}" wx:key="uuid"> 
            <kk-find-topics 
                height="{{298}}"
                width="{{224}}"
                cssName="find-six-topics"
                i="{{index}}"
                datas="{{item}}"
                listIndex="{{listIndex}}"
                moduletype="{{ list.module_type }}"
                moduleid="{{list.module_id}}"
                modulemame="{{list.title}}"
                listWrapIndex="{{newIndex}}"
                bind:onSubnavTap="subnavTap"
            />
        </block>
    </view>

    <!-- 按钮列表 -->
    <block wx:if="{{ list.show_more }}">
        <kk-find-btn-wrap 
            datas="{{ list }}"
            index="{{ listIndex }}"
            moduletype="{{ list.module_type }}"
            moduleid="{{ list.module_id }}"
            modulemame="{{ list.title }}"
            listWrapIndex="{{ newIndex }}"
            bind:topicBottomMoreTap="topicBottomMoreTap" 
            bind:topicBottomexchangeTap="topicBottomexchangeTap"
        />
    </block>
</view>