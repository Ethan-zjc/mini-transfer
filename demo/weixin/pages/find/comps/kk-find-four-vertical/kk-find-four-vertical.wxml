<view class="four-topics-vertical">
    <!-- 标题 -->
    <view class="find-common-title">{{ list.title }}</view>

    <!-- 专题列表 -->
    <view
        class="topics-list" 
        data-h="{{ list.image_height }}" 
        data-w="{{ list.image_width }}"
        data-name="find-four-topics-vertical">
        <block 
            wx:for="{{ list.banner_list }}"
            wx:for-index="ind" 
            wx:key="uuid">
            <kk-find-topics 
                height="{{ list.image_height }}"
                width="{{ list.image_width }}"
                cssName="find-four-topics-vertical"
                i="{{ ind }}"
                datas="{{ item }}"
                listIndex="{{ listIndex }}"
                moduletype="{{ list.module_type }}"
                moduleid="{{ list.module_id }}"
                modulemame="{{ list.title }}"
                listWrapIndex="{{ newIndex }}"
                bind:onSubnavTap="subnavTap"/>
        </block>
    </view>

    <!-- 按钮列表 -->
    <block wx:if="{{ list.show_more }}">
        <kk-find-btn-wrap 
            datas="{{ list }}"
            index="{{ listIndex }}"
            moduletype="{{ list.module_type }}"
            moduleid="{{ list.module_id }}"
            modulemame="{{ list.title }}"
            listWrapIndex="{{ newIndex }}"
            bind:topicBottomMoreTap="topicBottomMoreTap" 
            bind:topicBottomexchangeTap="topicBottomexchangeTap"
        />
    </block>
</view>