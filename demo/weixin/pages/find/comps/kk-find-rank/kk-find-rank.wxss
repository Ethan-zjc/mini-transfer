.ranking-topics {
  box-sizing: border-box;
  width: 750rpx;
  height: auto;
  padding: 0 0 32rpx;
}

.ranking-topics .ranking-top-bg image {
  filter: blur(6rpx);
}

.ranking-topics .nav-list {
  position: relative;
  padding: 0rpx 24rpx;
  height: 112rpx;
  display: flex;
  align-items: center;
}

.ranking-topics .nav-list .nav-tap {
  margin-right: 34rpx;
  line-height: 26rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Regular,PingFang SC;
  font-weight: 400;
  color: #666;
  height: 112rpx;
  line-height: 112rpx;
  position: relative;
}

.ranking-topics .nav-list .nav-tap:after {
  content: '';
  display: none;
  width: 40rpx;
  height: 8rpx;
  border-radius: 4rpx;
  background: #FDE23D;
  position: absolute;
  left: 50%;
  margin-left: -20rpx;
  top: 84rpx;
}

.ranking-topics .nav-list .active {
  padding-top: 0;
  font-size: 36rpx;
  font-family: PingFangSC-Semibold,PingFang SC;
  font-weight: 600;
  color: #333;
}

.ranking-topics .nav-list .active:after {
  display: block;
}

.ranking-topics .nav-list .right-more {
  position: absolute;
  top: 50%;
  right: 24rpx;
  transform: translateY(-50%);
  display: flex;
  align-items: center;
}

.ranking-topics .nav-list .right-more .text {
  line-height: 26rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular,PingFang SC;
  font-weight: 400;
  color: #999999;
}

.ranking-topics .nav-list .right-more .icon {
  position: relative;
  top: -1rpx;
  width: 24rpx;
  height: 24rpx;
}

.ranking-topics .topics-list-box {
  position: relative;
  width: 100%;
  height: 830rpx;
}

.ranking-topics .topics-list {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 24rpx 24rpx 110rpx;
  width: 750rpx;
  height: 830rpx;
  background: linear-gradient(184deg, rgba(0, 64, 114, 0.3) 0%, rgba(0, 6, 75, 0.7) 100%) rgba(0, 0, 0, 0.4);
}

.ranking-topics .topics-more {
  position: absolute;
  left: 24rpx;
  bottom: 30rpx;
  width: 702rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  z-index: 3;
}
