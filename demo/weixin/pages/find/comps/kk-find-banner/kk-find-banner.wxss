.carousel {
  position: relative;
  box-sizing: border-box;
  margin: 20rpx 16rpx 0 16rpx;
  width: 718rpx;
  height: 404rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.carousel .swiper-item, .carousel .swiper {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  overflow: hidden;
}

.carousel .swiper-dot {
  position: absolute;
  left: 0;
  bottom: 26rpx;
  width: 100%;
  z-index: 99;
  display: flex;
  justify-content: center;
}

.carousel .swiper-dot text {
  width: 15rpx;
  height: 6rpx;
  border-radius: 1px;
  display: block;
  background: rgba(255, 255, 255, 0.5);
  margin: 0 10rpx;
}

.carousel .swiper-dot text.active {
  background: #FDE23D;
}
