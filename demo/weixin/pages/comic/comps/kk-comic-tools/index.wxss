.btn-bottom {
  display: flex;
  justify-content: space-between;
  background: #fff;
  height: 98rpx;
}

.btn-bottom .list, .btn-bottom .view-btn {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.btn-bottom .list image, .btn-bottom .view-btn image {
  width: 48rpx;
  height: 48rpx;
}

.btn-bottom .list text, .btn-bottom .view-btn text {
  font-size: 18rpx;
  font-weight: bold;
  display: inline-block;
  line-height: 22rpx;
}

.btn-bottom .swatch {
  display: flex;
  align-items: center;
  text-align: center;
  color: #f9d410;
  font-size: 28rpx;
}

.btn-bottom .btn {
  display: flex;
  line-height: 98rpx;
  padding: 0 40rpx;
  font-size: 28rpx;
  color: #555;
  justify-content: center;
  align-items: center;
}

.btn-bottom button {
  font-size: 28rpx;
}

.btn-bottom .btn-group {
  display: flex;
  flex-wrap: nowrap;
}
