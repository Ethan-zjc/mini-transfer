.super-fav {
  height: 76rpx;
  position: fixed;
  bottom: 190rpx;
  left: 50%;
  z-index: 199;
  transform: translateX(-50%);
  display: table;
  padding-bottom: 10rpx;
}

.super-fav-content {
  height: 76rpx;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 22rpx;
  display: flex;
  align-items: center;
  padding: 0 28rpx 0 48rpx;
}

.super-fav-title {
  font-size: 28rpx;
  color: #fff;
  flex: 1;
  overflow: hidden;
  white-space: nowrap;
  height: 76rpx;
  line-height: 76rpx;
  font-family: PingFang SC;
}

.super-fav-button {
  margin: 0 14rpx 0 24rpx;
}

.super-fav-button .view-btn {
  padding: 0 20rpx;
  height: 48rpx;
  line-height: 48rpx;
  background: #ffe120;
  color: #fff;
  text-align: center;
  font-size: 22rpx;
  border-radius: 24rpx;
  color: #442509;
}

.super-fav-button .view-btn button {
  width: 100%;
  height: 100%;
  border-radius: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: none;
  font-size: 22rpx;
  color: #442509;
}

.super-fav-close {
  font-size: 20rpx;
  color: #fff;
  width: 34rpx;
  height: 34rpx;
}

.super-fav-close image {
  width: 100%;
  height: 100%;
}
