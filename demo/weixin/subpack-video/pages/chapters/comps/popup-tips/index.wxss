.popup-tips-wrap {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 6999;
}

.popup-tips-mask {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 5;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
}

.popup-tips-content {
  background: #fff;
  width: 574rpx;
  border-radius: 24rpx;
  padding: 48rpx 40rpx;
  box-sizing: border-box;
  position: absolute;
  z-index: 6;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.popup-tips-content-title {
  color: #222;
  font-weight: 500;
  font-size: 34rpx;
  text-align: center;
  line-height: 42rpx;
}

.popup-tips-content-des {
  font-size: 30rpx;
  color: #666;
  line-height: 36rpx;
  margin-top: 16rpx;
  font-weight: normal;
  text-align: center;
}

.popup-tips-bg {
  width: 300rpx;
  height: 158rpx;
  margin: 0 auto 16rpx;
}

.popup-tips-button {
  display: flex;
  justify-content: space-between;
  margin: 48rpx -12rpx 0;
}

.popup-tips-button-cell {
  flex: 1;
  min-width: 0;
  padding: 0 12rpx;
}

.popup-tips-button-cell button {
  width: 100% !important;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #222;
  background: #f5f5f5;
}

.popup-tips-button-cell .button-confirm {
  background: #ffe120;
  font-weight: 500;
}

.popup-tips-weaken {
  text-align: center;
  margin-top: 32rpx;
  height: 34rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.popup-tips-weaken text {
  width: 100%;
  font-size: 28rpx;
  text-align: center;
  color: #999;
}
