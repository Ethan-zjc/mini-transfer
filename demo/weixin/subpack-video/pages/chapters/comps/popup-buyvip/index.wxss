.popup-buyvip {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
}

.popup-buyvip .buyvip-wrapper {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
}

.popup-buyvip .buyvip-wrapper .close {
  position: absolute;
  top: -88rpx;
  right: 24rpx;
}

.popup-buyvip .buyvip-wrapper .close image {
  width: 64rpx;
  height: 64rpx;
}

.popup-buyvip .buyvip-wrapper .guide {
  margin: 0 auto;
  padding: 25rpx 28rpx;
  width: 702rpx;
  height: 140rpx;
  border-radius: 24rpx;
  background: #fff;
  background-size: 100% 100%;
  box-sizing: border-box;
}

.popup-buyvip .buyvip-wrapper .guide__title {
  overflow: hidden;
  height: 46rpx;
  font-size: 36rpx;
  font-weight: 500;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #775bfa;
  line-height: 46rpx;
}

.popup-buyvip .buyvip-wrapper .guide__content {
  overflow: hidden;
  margin-top: 8rpx;
  height: 34rpx;
  font-size: 26rpx;
  font-size: 400;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #222;
  line-height: 34rpx;
}

.popup-buyvip .buyvip-wrapper .buyvip {
  margin-top: 24rpx;
  padding-bottom: 28rpx;
  width: 100%;
  border-radius: 24rpx 24rpx 0 0;
  background: #fff;
  box-sizing: border-box;
}

.popup-buyvip .buyvip-wrapper .buyvip__title {
  padding: 30rpx 24rpx;
  height: 30rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #999;
  line-height: 30rpx;
}

.popup-buyvip .buyvip-wrapper .buyvip__btn {
  margin: 32rpx auto;
  padding: 24rpx 128rpx;
  width: 686rpx;
  font-weight: 500;
  border-radius: 200rpx;
  text-align: center;
  background: #ffe120;
  box-sizing: border-box;
}

.popup-buyvip .buyvip-wrapper .buyvip__btn text {
  font-size: 26rpx;
  text-decoration: line-through;
  color: #666;
}
