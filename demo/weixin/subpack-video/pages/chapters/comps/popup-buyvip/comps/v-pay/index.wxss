.v-pay .head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 24rpx;
  height: 88rpx;
  box-sizing: border-box;
}

.v-pay .head .title {
  font-size: 30rpx;
  font-weight: bold;
  color: #222;
}

.v-pay .head .desc {
  font-size: 24rpx;
  color: #999;
}

.v-pay .lists {
  overflow-y: hidden;
  width: 100%;
  height: 252rpx;
}

.v-pay .protocol {
  margin-top: 24rpx;
  text-align: center;
  line-height: 30rpx;
}

.v-pay .protocol text {
  font-size: 24rpx;
  font-weight: 400;
  color: #999;
}

.v-pay .protocol .word {
  color: #222;
}

.scroll-list {
  height: 280rpx;
  white-space: nowrap;
}

.scroll-list .item-wrap {
  position: relative;
  display: inline-block;
  overflow: hidden;
  margin-right: 16rpx;
  width: 212rpx;
  height: 252rpx;
  box-sizing: border-box;
}

.scroll-list .item-wrap.active .contain {
  border: 4rpx solid #775bfa;
  background: #f7f5ff;
}

.scroll-list .item-wrap.active .contain .price .text,
.scroll-list .item-wrap.active .contain .price .num {
  color: #775bfa;
}

.scroll-list .item-wrap.first-item {
  margin-left: 24rpx;
}

.scroll-list .item-wrap .contain {
  width: 212rpx;
  height: 252rpx;
  border: 2rpx solid #eee;
  border-radius: 12rpx;
  box-sizing: border-box;
}

.scroll-list .item-wrap .title {
  overflow: hidden;
  margin-top: 36rpx;
  width: 100%;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #222;
  line-height: 34rpx;
}

.scroll-list .item-wrap .price {
  display: flex;
  justify-content: center;
  align-items: flex-end;
  overflow: hidden;
  margin-top: 12rpx;
  width: 100%;
  height: 62rpx;
  font-family: 'PingFang SC';
  text-align: center;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-style: normal;
}

.scroll-list .item-wrap .price .text {
  display: inline-block;
  font-size: 24rpx;
  font-weight: bold;
  font-weight: 700;
  color: #222;
  line-height: 42rpx;
}

.scroll-list .item-wrap .price .num {
  font-size: 52rpx;
  font-weight: 700;
  color: #222;
  line-height: 62rpx;
}

.scroll-list .item-wrap .price .oriprice {
  display: inline-block;
  margin-left: 4rpx;
  font-size: 24rpx;
  color: #999;
  line-height: 44rpx;
  text-decoration-line: line-through;
}

.scroll-list .item-wrap .discount-info {
  display: flex;
  justify-content: center;
  margin-top: 16rpx;
}

.scroll-list .item-wrap .discount-info .txt {
  overflow: hidden;
  max-width: 100%;
  font-size: 22rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #666;
  line-height: 28rpx;
}

.scroll-list .item-wrap .give {
  display: flex;
  justify-content: center;
  margin-top: 8rpx;
}

.scroll-list .item-wrap .give text {
  margin: auto;
  padding: 4rpx 12rpx;
  font-size: 20rpx;
  border: 1rpx solid rgba(255, 117, 26, 0.1);
  border-radius: 100rpx;
  color: #ff751a;
  background: #fff2e9;
}

.scroll-list .item-wrap .give-kkb {
  display: flex;
  padding-top: 8rpx;
}

.scroll-list .item-wrap .give-kkb .content {
  position: relative;
  display: flex;
  align-items: center;
}

.scroll-list .item-wrap .give-kkb .content .banner-icon {
  position: absolute;
  top: 0;
  left: -12rpx;
  background: none;
}

.scroll-list .item-wrap .give-kkb .content .banner-icon-1 {
  width: 210rpx;
  height: 94rpx;
}

.scroll-list .item-wrap .give-kkb .content .banner-icon-2 {
  width: 210rpx;
  height: 68rpx;
}

.scroll-list .item-wrap .combo {
  position: absolute;
  top: -2rpx;
  right: -2rpx;
  z-index: 2;
  width: 96rpx;
  height: 32rpx;
  font-size: 20rpx;
  border-radius: 0rpx 16rpx 0 12rpx;
  text-align: center;
  color: #fff;
  background: linear-gradient(90deg, #ff257f 0.17%, #ff0047 100%);
  line-height: 32rpx;
}

.scroll-list .item-wrap .right-icon {
  position: absolute;
  top: 3rpx;
  right: 0;
  width: auto;
  height: 32rpx;
  background: none;
}

.scroll-list .item-wrap .right-icon image {
  position: relative;
  top: -3rpx;
  right: 0;
  width: 210rpx;
  height: 32rpx;
}
