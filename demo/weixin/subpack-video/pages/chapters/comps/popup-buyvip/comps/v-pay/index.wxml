<!-- 多充多送弹窗详情 -->
<view class="v-pay">
    <!-- <view class="head">
        <view class="title">快看VIP会员</view>
        <view class="desc" wx:if="{{ activeItem.combo == 1 }}">到期自动续费，可随时取消</view>
    </view> -->
    <!-- 档位信息 -->
    <view class="lists">
        <scroll-view class="scroll-list" scroll-x="{{ true }}">
            <view class="item-wrap {{ !index ? 'first-item' : '' }} {{ item.id == activeItem.id ? 'active' : '' }}" wx:for="{{ membersList }}" wx:key="id" data-index="{{ index }}" data-id="{{ item.id }}" data-title="{{ item.title }}" catchtap="choiceGoodTap">
                <view class="contain">
                    <!-- 商品标题 -->
                    <view class="title">{{ item.title }}</view>

                    <!-- 商品价格 -->
                    <view class="price">
                        <text class="text">￥</text>
                        <text class="num">{{ (item.price.real_price - ((item.usableCouponFirst && item.usableCouponFirst.amount) || 0)) / 100 }}</text>
                        <text class="oriprice">￥{{ !!item.usableCouponFirst ? item.realPrice : item.markPruice }}</text>
                    </view>

                    <!-- 显示的优惠信息 -->
                    <view class="discount-info">
                        <text class="txt" wx:if="{{ item.usableCouponFirst && item.usableCouponFirst.amount }}">已抵扣¥{{ item.usableCouponFirst.amount / 100 }}</text>
                        <text class="txt" wx:elif="{{ item.words_info.discount_tips || item.description }}">{{ item.words_info.discount_tips ? item.words_info.discount_tips : item.description }}</text>
                    </view>

                    <!-- 赠送的kkb -->
                    <view class="give-kkb">
                        <view class="content" wx:if="{{ item.image_info.banner }}">
                            <image data-index="{{ index }}" class="banner-icon {{ imgClass[index] == 1 ? 'banner-icon-1' : 'banner-icon-2' }}" src="{{ item.image_info.banner }}" bindload="imgbindload" />
                        </view>
                    </view>

                    <!-- 右上角 icon -->
                    <view class="right-icon" wx:if="{{ item.image_info.icon }}">
                        <image class="icon" src="{{ item.image_info.icon }}" />
                    </view>
                </view>
            </view>
        </scroll-view>
    </view>

    <!-- 协议信息 -->
    <view class="protocol">
        <text>开通前请阅读《</text>
        <text class="word" bindtap="questionAllTap" data-id="2">自动续费协议</text>
        <text>》和《</text>
        <text class="word" bindtap="questionAllTap" data-id="3">会员服务协议</text>
        <text>》</text>
    </view>
</view>
