.navigation {
  width: 100%;
  position: fixed;
  top: 0;
  z-index: 9999;
}

.post {
  position: relative;
  width: 100%;
  height: 100%;
  -webkit-overflow-scrolling: touch;
}

.post-top {
  width: 100%;
}

.atlas {
  display: flex;
  flex-direction: column;
  position: relative;
}

.atlas .swiper {
  position: relative;
  min-height: 422rpx;
}

.atlas-details {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.atlas .dots {
  width: 100%;
  height: 48rpx;
  z-index: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}

.atlas .dots .dot {
  width: 8rpx;
  height: 8rpx;
  margin: 4rpx;
  border-radius: 50%;
  background: #eaeef0;
}

.atlas .dots .dot.active {
  width: 16rpx;
  height: 8rpx;
  background: #ffba15;
  border-radius: 4rpx;
}

.atlas .nums {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 80rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.24);
  border-radius: 24rpx;
  color: white;
  font-size: 22rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-family: PingFangSC-Regular,PingFang SC;
}

.atlas .lookAll {
  position: absolute;
  bottom: 16rpx;
  height: 48rpx;
  width: 162rpx;
  background: rgba(0, 0, 0, 0.24);
  border-radius: 24rpx;
  text-align: center;
  color: #FFFFFF;
  line-height: 48rpx;
  font-size: 22rpx;
  opacity: 0;
  transition: all 0.6s;
}

.atlas .lookAll.show {
  opacity: 1;
}

.video {
  width: 100%;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.video-windows {
  width: 100%;
}

.video .pause {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -50rpx;
  margin-top: -50rpx;
}

.video .pause image {
  width: 100%;
  height: 100%;
}

.video .full-screen {
  position: absolute;
  bottom: 24rpx;
  right: 24rpx;
  height: 56rpx;
  width: 56rpx;
}

.longPic.miMode image {
  margin-top: -1rpx;
}

.middle {
  width: 100%;
  padding: 0rpx 32rpx 40rpx;
  box-sizing: border-box;
}

.middle .infos, .middle .article, .middle .labels {
  width: 100%;
}

.middle .infos {
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.middle .infos text {
  color: #999999;
}

.middle .infos .name {
  flex: 6;
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.middle .infos .msg {
  flex: 4;
  font-size: 24rpx;
  text-align: right;
}

.middle .infos .msg text:nth-child(1)::after {
  content: '';
  display: inline-block;
  width: 2rpx;
  height: 18rpx;
  background: #e6e6e6;
  border-radius: 1rpx;
  margin: 0 10rpx;
}

.middle .article {
  margin: 32rpx 0  26rpx;
}

.middle .article text {
  font-size: 32rpx;
  line-height: 48rpx;
  text-align: justify;
  color: #333333;
  font-family: PingFangSC-Regular, PingFang SC;
}

.middle .labels {
  width: 100%;
  height: 36rpx;
  overflow: hidden;
}

.middle .labels-list {
  display: flex;
  justify-content: flex-start;
  height: 50rpx;
  white-space: nowrap;
  overflow-x: scroll;
  width: 100%;
  -webkit-overflow-scrolling: touch;
}

.middle .labels .detail {
  display: flex;
  height: 36rpx;
  align-items: center;
  margin-right: 24rpx;
}

.middle .labels image {
  width: 36rpx;
  height: 36rpx;
}

.middle .labels text {
  vertical-align: middle;
  font-size: 24rpx;
  color: #999999;
}

.middle .rel-topic {
  width: 686rpx;
  height: 216rpx;
  margin: auto;
  display: flex;
  padding: 24rpx;
  box-sizing: border-box;
  background: #F9F9F9;
  border-radius: 12rpx;
}

.middle .rel-topic .pic {
  border-radius: 12rpx;
  overflow: hidden;
  margin-right: 16rpx;
  width: 266rpx;
  height: 168rpx;
}

.middle .rel-topic .right {
  flex: 1;
  max-width: 356rpx;
  overflow: hidden;
  position: relative;
}

.middle .rel-topic .right .title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-top: 6rpx;
  line-height: 45rpx;
  max-width: 330rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.middle .rel-topic .right .tag {
  height: 34rpx;
  margin: 12rpx 0 24rpx;
}

.middle .rel-topic .right .tag-txt {
  background: rgba(255, 163, 0, 0.1);
  border-radius: 6rpx;
  line-height: 34rpx;
  padding: 0 12rpx;
  display: inline-block;
  font-size: 24rpx;
  color: #D0AC63;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: auto;
  max-width: 100%;
}

.middle .rel-topic .rel-infos {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: absolute;
  bottom: 0;
  right: 0;
  height: 48rpx;
  width: 100%;
}

.middle .rel-topic .rel-infos .fav {
  display: flex;
  align-items: center;
}

.middle .rel-topic .rel-infos .fav-img {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.middle .rel-topic .rel-infos .fav-txt {
  color: #999999;
  font-size: 24rpx;
}

.middle .rel-topic .rel-infos .readbtn {
  width: 128rpx;
  height: 48rpx;
  background: #FFE120;
  border-radius: 24rpx;
  font-size: 22rpx;
  color: #442509;
  line-height: 48rpx;
  font-weight: 500;
  text-align: center;
}

.more {
  box-sizing: border-box;
}

.more.borderTop {
  border-top: 12rpx solid #f7f9fa;
}

.more-title {
  width: 100%;
  height: 96rpx;
  padding: 32rpx;
  box-sizing: border-box;
  font-weight: bold;
  color: #333333;
}

.more-post {
  width: 100%;
  padding: 16rpx 16rpx;
  box-sizing: border-box;
}

.more .list-half {
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: auto;
  float: left;
}

.more .mode {
  width: 350rpx;
  box-sizing: border-box;
  box-shadow: 0 0 6rpx 0 rgba(0, 0, 0, 0.08);
  border-radius: 4rpx;
  display: flex;
  justify-content: center;
  align-content: center;
  font-size: 40rpx;
  color: royalblue;
  margin-bottom: 16rpx;
  display: inline-block;
}

.more .chunk {
  width: 350rpx;
  box-sizing: border-box;
  background: white;
  box-shadow: 0 0 6rpx 0 rgba(0, 0, 0, 0.08);
  border-radius: 4rpx;
  display: flex;
  justify-content: center;
  align-content: center;
  font-size: 40rpx;
  color: royalblue;
  margin-bottom: 16rpx;
  height: auto;
}

.load-tips {
  text-align: center;
  line-height: 2;
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  padding: 20rpx 0;
}

.fixed {
  width: 100%;
  height: 90rpx;
  position: fixed;
  bottom: 0;
  transition: transform .3s;
  z-index: 100;
  background: #ffffff;
}

.fixed-detail {
  width: 100%;
  height: 90rpx;
  background: #ffffff;
  display: flex;
  align-items: center;
}

.fixed .bullet {
  width: 318rpx;
  height: 100%;
}

.fixed .praise {
  width: 172rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.fixed .praise image {
  width: 48rpx;
  height: 48rpx;
}

.fixed .praise text {
  font-size: 24rpx;
  color: #6f6f6f;
}

.fixed .share {
  padding: 0;
  width: 213rpx;
  height: 60rpx;
  background: #07C160;
  border-radius: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.fixed .share image {
  width: 40rpx;
  height: 40rpx;
}

.fixed .share text {
  font-size: 24rpx;
  color: white;
}

.suspend {
  position: fixed;
  right: 32rpx;
  bottom: 20%;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  z-index: 99;
  transition: transform .6s;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0px 5px 14px 0px rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: center;
}

.suspend image {
  width: 48rpx;
  height: 48rpx;
}

.suspend text {
  font-size: 20rpx;
  font-weight: bold;
  line-height: 26rpx;
  color: #333333;
}

.super-left {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  position: fixed;
  bottom: 190rpx;
  left: 0rpx;
  padding-bottom: 114rpx;
}

.super-left .btn-home {
  padding: 0 32rpx 0 24rpx;
  background: #FFE23D;
  height: 60rpx;
  display: flex;
  align-items: center;
  border-radius: 0px 100rpx 100rpx 0px;
  box-shadow: 0px 8rpx 12rpx 0px rgba(0, 0, 0, 0.06);
  animation: backHome 0.3s 0.3s 1 normal both;
}

.super-left .btn-home image {
  width: 24rpx;
  height: 24rpx;
}

.super-left .btn-home text {
  font-family: PingFangSC-Medium, PingFang SC;
  color: #442509;
  font-size: 26rpx;
  line-height: 26rpx;
  font-weight: 500;
}

.super-left .btn-home-hidden {
  opacity: 0;
}
