.wrap {
  z-index: 9999;
  display: table;
  position: fixed;
  left: 50%;
  transform: translate(-50%, -50%);
  width: auto;
  max-width: 686rpx;
  height: auto;
}

.wrap .toast {
  box-sizing: border-box;
  z-index: 1;
  width: 100%;
  height: 100%;
  padding: 18rpx 48rpx;
  border-radius: 24rpx;
  background-color: rgba(0, 0, 0, 0.7);
}

.wrap .toast .image {
  width: 122rpx;
  height: 122rpx;
  margin: 0 auto;
}

.wrap .toast .content {
  line-height: 40rpx;
  text-align: justify;
}

.wrap .toast .content .icon {
  width: 40rpx;
  height: 40rpx;
  float: left;
}

.wrap .toast .blank {
  height: 8rpx;
}

.wrap .loading {
  width: 198rpx !important;
  padding: 18rpx 24rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}

.wrap .content {
  color: #fff;
  font-size: 28rpx;
}

.wrap.mask {
  left: 0;
  top: 0;
  transform: translate(0, 0);
  width: 100%;
  max-width: 100%;
  height: 100%;
}

.wrap.mask .toast {
  display: table;
  position: fixed;
  left: 50%;
  transform: translate(-50%, -50%);
  width: auto;
  max-width: 686rpx;
  height: auto;
}
