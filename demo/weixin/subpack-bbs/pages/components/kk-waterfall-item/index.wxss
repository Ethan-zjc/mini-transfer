.w-item {
  overflow: hidden;
  line-height: 1;
  font-size: 0;
  margin-bottom: 20rpx;
  animation: zoomIn 0.5s 0s;
  border-radius: 4rpx;
  background-color: #ffffff;
  box-shadow: 0 0 6rpx 0 rgba(0, 0, 0, 0.08);
}

.w-item .w-intro {
  font-size: 24rpx;
  line-height: 1.5;
  word-break: break-all;
  padding: 20rpx 10rpx;
  color: #222;
  padding: 24rpx 18rpx;
  box-sizing: border-box;
}

.w-item .w-image {
  width: 100%;
  position: relative;
  border-top-right-radius: 4rpx;
  border-top-left-radius: 4rpx;
  overflow: hidden;
}

.w-item .w-image .cover {
  width: 100%;
  vertical-align: top;
}

.w-item .w-image .sign {
  position: absolute;
  bottom: 24rpx;
  right: 24rpx;
  width: 40rpx;
  height: 40rpx;
}

.follow {
  display: flex;
  align-items: center;
  margin-bottom: 18rpx;
}

.follow image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.follow text {
  flex: 1;
  display: inline-block;
  font-size: 24rpx;
  line-height: 24rpx;
  height: 24rpx;
  color: #999999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.title {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-align: justify;
}

.title text {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  font-family: PingFangSC-Medium, PingFang SC;
}

.desc {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 30rpx;
  height: 32rpx;
  position: relative;
}

.desc .author {
  height: 100%;
  display: flex;
  align-items: center;
  overflow: hidden;
  position: relative;
}

.desc .author .head {
  width: 32rpx;
  height: 32rpx;
  background: #161515;
  margin-right: 8rpx;
  border-radius: 50%;
}

.desc .author .vipIcon {
  position: absolute;
  width: 16rpx;
  height: 16rpx;
  bottom: 0;
  left: 20rpx;
  z-index: 2;
}

.desc .author > text {
  max-width: 160rpx;
  font-size: 20rpx;
  color: #999999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.desc .praise {
  height: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  position: absolute;
  right: 0;
  bottom: -12rpx;
  height: 50rpx;
  z-index: 99;
  min-width: 100rpx;
  max-width: 100rpx;
}

.desc .praise image {
  width: 26rpx;
  height: 26rpx;
  margin-right: 10rpx;
}

.desc .praise text {
  font-size: 24rpx;
  color: #999999;
  display: inline-block;
  height: 30rpx;
}

@keyframes zoomIn {
  0% {
    opacity: 0;
    transform: scale(0);
    transform: translateY(100rpx);
    animation-timing-function: ease-out;
  }
  40% {
    opacity: 0.2;
    transform: scale(0.2);
    transform: translateY(-20rpx);
    animation-timing-function: ease-in;
  }
  80% {
    opacity: 0.8;
    transform: scale(0.8);
    transform: translateY(80rpx);
    animation-timing-function: ease-out;
  }
  100% {
    opacity: 1;
    transform: scale(1);
    transform: translateY(0rpx);
    animation-timing-function: ease-out;
  }
}
