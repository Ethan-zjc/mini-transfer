.kk-act-detail {
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  z-index: 6999;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.7);
}

.kk-act-detail .dialog {
  opacity: 0;
  transition: all .2s;
  transform: scale(0.4);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.kk-act-detail .dialog.show {
  opacity: 1;
  transform: scale(1);
}

.kk-act-detail .dialog.hide {
  opacity: 0;
}

.kk-act-detail .dialog .close {
  width: 64rpx;
  height: 64rpx;
  margin-top: 48rpx;
}

.kk-act-detail .intro {
  padding: 48rpx 40rpx;
  box-sizing: border-box;
  width: 574rpx;
  height: 816rpx;
  background: #fff;
  border-radius: 24rpx;
}

.kk-act-detail .header {
  padding-bottom: 22rpx;
}

.kk-act-detail .top {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.kk-act-detail .top .title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333333;
  line-height: 1;
}

.kk-act-detail .top .award {
  display: flex;
  align-items: center;
}

.kk-act-detail .top .award .txt {
  font-size: 24rpx;
  color: #999;
  line-height: 1;
  margin-top: -1rpx;
}

.kk-act-detail .top .award .img {
  width: 24rpx;
  height: 24rpx;
}

.kk-act-detail .price {
  font-size: 24rpx;
  margin-top: 8rpx;
  line-height: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.kk-act-detail .price .infos {
  color: #999;
}

.kk-act-detail .price .total {
  color: #FF751A;
}

.kk-act-detail .price .tips {
  font-size: 24rpx;
  color: #FF5058;
}

.kk-act-detail .contain {
  width: 100%;
  max-height: 676rpx;
  overflow-y: scroll;
  box-sizing: border-box;
  padding-bottom: 48rpx;
}

.kk-act-detail .contain::-webkit-scrollbar {
  width: 0;
}

.kk-act-detail .contain .award-item {
  height: 110rpx;
  box-sizing: border-box;
  padding: 20rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.kk-act-detail .contain .award-item .left {
  display: flex;
  height: 100%;
  flex-direction: column;
  justify-content: space-between;
}

.kk-act-detail .contain .award-item .left .title {
  font-size: 28rpx;
  line-height: 1;
  color: #222;
}

.kk-act-detail .contain .award-item .left .desc {
  display: flex;
  align-items: center;
}

.kk-act-detail .contain .award-item .left .txt {
  font-size: 24rpx;
  line-height: 1;
  color: #FF751A;
}

.kk-act-detail .contain .award-item .left .img {
  width: 36rpx;
  height: 36rpx;
}

.kk-act-detail .contain .award-item .btn {
  width: 128rpx;
  border-radius: 28rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  background: #F5F5F5;
  font-size: 22rpx;
  font-weight: 500;
  color: #ccc;
}

.kk-act-detail .contain .award-item .btn.unclaimed {
  background: #F5F5F5;
  color: #666666;
  font-weight: normal;
}

.kk-act-detail .contain .award-item .btn.getaward {
  background: #FDEB3D;
  color: #442509;
}

.kk-act-detail .contain .award-item .btn.already {
  background: #fff;
  color: #CCCCCC;
  font-weight: normal;
}

.kk-act-detail .contain .unite {
  font-size: 30rpx;
  color: #25A0F9;
  margin-top: 20rpx;
}

.kk-act-detail .contain .act-title {
  margin: 32rpx 0 12rpx;
  font-size: 24rpx;
  color: #999;
  line-height: 1;
}

.kk-act-detail .contain .act-desc {
  font-size: 24rpx;
  color: #999;
  display: inline-block;
  line-height: 36rpx;
}
