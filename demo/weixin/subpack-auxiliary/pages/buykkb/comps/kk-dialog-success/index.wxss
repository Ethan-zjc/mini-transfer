.popup-buykkb-success {
  position: fixed;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  z-index: 99999;
  display: flex;
  justify-content: center;
}

.popup-buykkb-success .succ-content {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 574rpx;
  transform: translate(-50%, -50%);
  margin-top: -50rpx;
  padding-bottom: 48rpx;
  background: #fff;
  border-radius: 24rpx;
}

.popup-buykkb-success .succ-icon {
  width: 430rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  top: -55rpx;
  margin-left: -215rpx;
  z-index: 5;
}

.popup-buykkb-success .succ-icon image {
  width: 100%;
  height: 100%;
}

.popup-buykkb-success .succ-bg {
  width: 100%;
  height: 200rpx;
  background: linear-gradient(178.74deg, #FFB889 1.09%, rgba(255, 219, 149, 0) 98.96%);
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
  border-radius: 24rpx;
}

.popup-buykkb-success .succ-pic {
  margin-top: 32rpx;
  display: flex;
  justify-content: center;
  align-items: flex-start;
}

.popup-buykkb-success .succ-pic image {
  width: 240rpx;
  height: 320rpx;
}

.popup-buykkb-success .succ-title, .popup-buykkb-success .succ-subtitle {
  position: relative;
  z-index: 3;
}

.popup-buykkb-success .succ-title {
  padding-top: 120rpx;
  display: flex;
  justify-content: center;
}

.popup-buykkb-success .succ-title text {
  font-family: 'PingFang SC';
  font-style: normal;
  font-weight: 500;
  font-size: 40rpx;
  line-height: 40rpx;
  text-align: center;
  color: #FF751A;
}

.popup-buykkb-success .succ-subtitle {
  margin-top: 16rpx;
  display: flex;
  justify-content: center;
}

.popup-buykkb-success .succ-subtitle text {
  font-family: 'PingFang SC';
  font-style: normal;
  font-weight: 400;
  font-size: 30rpx;
  line-height: 36rpx;
  text-align: center;
  color: #666666;
}

.popup-buykkb-success .succ-button {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 494rpx;
  height: 88rpx;
  background: #FFE120;
  border-radius: 44rpx;
  margin: 32rpx auto 0;
}

.popup-buykkb-success .succ-button text {
  font-family: 'PingFang SC';
  font-style: normal;
  font-weight: 500;
  font-size: 32rpx;
  line-height: 40rpx;
  text-align: center;
  color: #222222;
}

.popup-buykkb-success .succ-close {
  width: 64rpx;
  position: absolute;
  left: 50%;
  margin-left: -32rpx;
  bottom: -112rpx;
  z-index: 5;
}

.popup-buykkb-success .succ-close image {
  width: 64rpx;
  height: 64rpx;
}
