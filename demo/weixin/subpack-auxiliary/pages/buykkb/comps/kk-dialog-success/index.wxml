<!-- 支付成功弹窗 实验 -->
<view class="popup-buykkb-success">
    <view class="succ-content">
        <view class="succ-icon">
            <image class="img" mode="aspectFit" src="https://static3w.kuaikanmanhua.com/assets/img/remote_images/pay/ico-line_42b25de.png"></image>
        </view>
        <view class="succ-bg"></view>
        <view class="succ-title"><text>充值成功</text></view>
        <view class="succ-subtitle">
            <text>本次充值{{rechargeKkb.recharge_value}}，{{rechargeKkb.present_red_kkb ? '获赠'+rechargeKkb.present_red_kkb+'，' : ''}}当前余额{{ userAccount }}</text>
        </view>
        <view class="succ-pic">
            <image class="img" show-menu-by-longpress="true" mode="aspectFit" src="https://static3w.kuaikanmanhua.com/assets/img/remote_images/pay/ico-ewm_8c77af5.png"></image>
        </view>
        <view class="succ-button" bindtap="tapAccounts">
            <text>关注公众号领福利</text>
        </view>
        <view class="succ-close" bindtap="tapClose">
            <image class="img" mode="aspectFit" src="https://static3w.kuaikanmanhua.com/assets/img/remote_images/icons/icon-close_5963ee4.png"></image>
        </view>
    </view>
</view>