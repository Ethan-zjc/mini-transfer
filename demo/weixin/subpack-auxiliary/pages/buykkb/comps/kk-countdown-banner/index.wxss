.kk-countdown-banner {
  position: fixed;
  left: 0;
  bottom: 110rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  width: 100%;
  height: 76rpx;
  background-color: #FFF7F7;
  color: #FA6565;
  font-size: 28rpx;
  box-sizing: border-box;
}

.kk-countdown-banner image {
  margin-right: 8rpx;
  width: 36rpx;
  height: 36rpx;
}

.kk-countdown-banner .title {
  flex: 1;
}

.kk-countdown-banner .time {
  display: flex;
  align-items: center;
}

.kk-countdown-banner .time > text {
  margin: 0 4rpx;
  font-size: 24rpx;
  color: #FFA7A7;
}

.kk-countdown-banner .time-box {
  width: 42rpx;
  line-height: 42rpx;
  height: 44rpx;
  background: #FFFFFF;
  border: 1rpx solid #FFA7A7;
  border-radius: 8rpx;
  text-align: center;
}
