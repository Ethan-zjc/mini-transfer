.v-interests {
  position: relative;
  margin-top: 32rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.v-interests .title {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  color: #222222;
  font-size: 30rpx;
  font-weight: bold;
}

.v-interests .vip-rights {
  padding: 8rpx 10rpx 38rpx;
}

.v-interests .vip-rights .candy-line {
  display: flex;
}

.v-interests .candy {
  padding: 28rpx 0 20rpx;
  flex-grow: 1;
}

.v-interests .candy image {
  display: block;
  width: 88rpx;
  height: 88rpx;
  margin: 0 auto 16rpx;
}

.v-interests .candy text {
  display: block;
  text-align: center;
  color: #333;
  font-size: 24rpx;
  line-height: 24rpx;
}
