.v-lists {
  width: 100%;
  margin-top: 32rpx;
}

.v-lists .head {
  width: 100%;
  height: 88rpx;
  padding-left: 24rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.v-lists .head .title {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #222;
  font-weight: bold;
  font-size: 30rpx;
}

.v-lists .heddenbar {
  width: 100%;
  height: 322rpx;
  overflow-y: hidden;
  overflow-x: scroll;
  white-space: nowrap;
}

.v-lists .list {
  height: 350rpx;
}

.v-lists .list .stick {
  width: 24rpx;
  height: 100%;
}

.v-lists .list .topic {
  width: 200rpx;
  height: 352rpx;
  margin-right: 16rpx;
  display: inline-block;
  position: relative;
}

.v-lists .list .topic.first-item {
  margin-left: 24rpx;
}

.v-lists .list .topic .cover {
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
}

.v-lists .list .topic .play {
  position: absolute;
  z-index: 4;
  width: 56rpx;
  height: 56rpx;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
}

.v-lists .list .topic .title {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: 12rpx;
  color: #222222;
  font-size: 28rpx;
  font-weight: 500;
  line-height: 34rpx;
}

.v-lists .list .topic .labels {
  margin-top: 8rpx;
  height: 30rpx;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  vertical-align: middle;
  line-height: 30rpx;
}

.v-lists .list .topic .labels .label {
  font-size: 24rpx;
  color: #999999;
  margin-right: 8rpx;
}

.v-lists .list .topic .top-icon {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  z-index: 1;
  width: 88rpx;
  height: 32rpx;
}

.v-lists .progress {
  display: flex;
  justify-content: center;
  margin-top: 30rpx;
}

.v-lists .progress .prog {
  width: 90rpx;
  height: 8rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.v-lists .progress .info {
  width: 90rpx;
}
