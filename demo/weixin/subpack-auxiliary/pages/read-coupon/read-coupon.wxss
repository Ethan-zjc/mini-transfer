.read-coupon {
  background-color: #E5E5E5;
  min-height: 100vh;
}

.read-coupon .tab {
  height: 72rpx;
  display: flex;
  justify-content: space-around;
  background-color: #ffffff;
}

.read-coupon .tab .tab-item {
  position: relative;
  color: #999999;
  height: 100%;
  line-height: 72rpx;
  font-size: 32rpx;
}

.read-coupon .tab .tab-item .tab-icon {
  position: absolute;
  left: 50%;
  bottom: 0;
  margin-left: -20rpx;
  height: 6rpx;
  width: 40rpx;
  background: transparent;
}

.read-coupon .tab .active-tab {
  font-weight: 500;
  color: #333333;
}

.read-coupon .tab .active-tab .tab-icon {
  background: #FDE23D;
}

.read-coupon .list {
  padding: 24rpx;
}

.read-coupon .list .time {
  margin-bottom: 24rpx;
  height: 34rpx;
  line-height: 34rpx;
  font-size: 24rpx;
  color: #999999;
  text-align: center;
}

.read-coupon .list .item {
  margin-bottom: 24rpx;
  display: flex;
  width: 702rpx;
  height: 186rpx;
  background-color: #ffffff;
  border: 1px solid #DCDFE6;
  border-radius: 12px;
}

.read-coupon .list .item .topic-box {
  padding: 24rpx 43rpx 24rpx 24rpx;
  display: flex;
  width: 549rpx;
  overflow: hidden;
}

.read-coupon .list .item .topic-box .cover {
  border-radius: 4px;
  overflow: hidden;
}

.read-coupon .list .item .topic-box .info {
  padding: 8rpx 0 8rpx 24rpx;
  width: 305rpx;
}

.read-coupon .list .item .topic-box .info .title {
  height: 34rpx;
  line-height: 34rpx;
  font-weight: 500;
  font-size: 34rpx;
  color: #333333;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.read-coupon .list .item .topic-box .info .desc {
  padding-top: 12rpx;
  font-size: 24rpx;
  height: 24rpx;
  line-height: 24rpx;
  color: #999999;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.read-coupon .list .item .topic-box .info .coupon-number {
  padding-top: 26rpx;
  font-size: 24rpx;
  line-height: 24rpx;
}

.read-coupon .list .item .cut-box {
  position: relative;
  width: 1rpx;
}

.read-coupon .list .item .cut-box .line {
  margin-top: 28rpx;
  width: 0rpx;
  height: 134rpx;
  border: 1rpx dashed #DCDFE6;
}

.read-coupon .list .item .cut-box .circle {
  position: absolute;
  left: -8rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #E5E5E5;
}

.read-coupon .list .item .cut-box .top {
  top: -8rpx;
}

.read-coupon .list .item .cut-box .bottom {
  bottom: -8rpx;
}

.read-coupon .list .item .coupon-box {
  width: 152rpx;
}

.read-coupon .list .item .coupon-box .number {
  padding-top: 44rpx;
  color: #F56C6C;
  font-size: 28rpx;
  line-height: 28rpx;
  text-align: center;
}

.read-coupon .list .item .coupon-box .number span {
  font-size: 48rpx;
}

.read-coupon .list .item .coupon-box .button {
  margin: 30rpx auto;
  width: 104rpx;
  height: 54rpx;
  line-height: 54rpx;
  text-align: center;
  border-radius: 28rpx;
  background-color: #fde23d;
  color: #442509;
  font-weight: 500;
  font-size: 24rpx;
}

.read-coupon .list .item .used .number {
  color: #999999;
}

.read-coupon .list .item .used .button {
  border: 1rpx solid #DCDFE6;
  background-color: #ffffff;
  color: #333333;
}

.read-coupon .no-data {
  margin-top: 400rpx;
  text-align: center;
  color: #000000;
  font-size: 26rpx;
}
