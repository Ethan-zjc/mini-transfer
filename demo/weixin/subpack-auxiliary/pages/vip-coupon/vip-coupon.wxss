.vip-coupon {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.vip-coupon .tab {
  display: flex;
  justify-content: space-around;
  height: 80rpx;
  background-color: #fff;
}

.vip-coupon .tab .tab-item {
  position: relative;
  height: 100%;
  font-size: 30rpx;
  color: #999;
  line-height: 80rpx;
}

.vip-coupon .tab .tab-item .tab-icon {
  position: absolute;
  bottom: 8rpx;
  left: 50%;
  margin-left: -16rpx;
  width: 32rpx;
  height: 6rpx;
  border-radius: 4rpx;
  background: transparent;
}

.vip-coupon .tab .active-tab {
  font-weight: 500;
  color: #333;
}

.vip-coupon .tab .active-tab .tab-icon {
  background: #fde23d;
}

.vip-coupon .list .item {
  position: relative;
  display: flex;
  margin: 24rpx auto 0rpx;
  width: 702rpx;
  height: 180rpx;
  border: 2rpx solid #dcdfe6;
  border-radius: 12rpx;
  background-color: #fff;
}

.vip-coupon .list .item .cut-box {
  position: relative;
  width: 2rpx;
}

.vip-coupon .list .item .cut-box .line {
  margin-top: 16rpx;
  width: 0rpx;
  height: 144rpx;
  border: 2rpx dashed #e8e8e8;
  box-sizing: border-box;
}

.vip-coupon .list .item .cut-box .circle {
  position: absolute;
  left: -11rpx;
  width: 24rpx;
  height: 24rpx;
  border: 2rpx solid #dcdfe6;
  border-radius: 50%;
  background-color: #f5f5f5;
  box-sizing: border-box;
}

.vip-coupon .list .item .cut-box .shelter {
  position: absolute;
  z-index: 2;
  width: 24rpx;
  height: 18rpx;
  background-color: #f5f5f5;
}

.vip-coupon .list .item .cut-box .top {
  top: -12rpx;
}

.vip-coupon .list .item .cut-box .top .shelter {
  top: -10rpx;
  left: -2rpx;
}

.vip-coupon .list .item .cut-box .bottom {
  bottom: -12rpx;
}

.vip-coupon .list .item .cut-box .bottom .shelter {
  bottom: -10rpx;
  left: -2rpx;
}

.vip-coupon .list .item .coupon-box {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 200rpx;
  box-sizing: border-box;
}

.vip-coupon .list .item .coupon-box .con {
  display: flex;
  justify-content: center;
  align-items: flex-end;
  width: 100%;
  height: 60rpx;
}

.vip-coupon .list .item .coupon-box .con .symbol {
  width: 30rpx;
  font-size: 30rpx;
  font-weight: 500;
  text-align: center;
  color: #ff751a;
  line-height: 36rpx;
}

.vip-coupon .list .item .coupon-box .con .num {
  font-size: 64rpx;
  font-weight: 600;
  color: #ff751a;
  line-height: 60rpx;
}

.vip-coupon .list .item .infos {
  display: flex;
  flex-direction: column;
  padding: 32rpx 54rpx;
  box-sizing: border-box;
}

.vip-coupon .list .item .infos .title {
  font-size: 30rpx;
  font-style: normal;
  font-weight: 500;
  line-height: 36rpx;
  color: #222;
}

.vip-coupon .list .item .infos .validity {
  margin-top: 4rpx;
  font-size: 26rpx;
  font-style: normal;
  font-weight: 400;
  line-height: 32rpx;
  color: #999;
}

.vip-coupon .list .item .infos .label {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
  height: 36rpx;
}

.vip-coupon .list .item .infos .label .txt {
  padding: 6rpx 12rpx;
  font-size: 20rpx;
  border-radius: 6rpx;
  color: #999;
  background-color: #f5f5f5;
  box-sizing: border-box;
}

.vip-coupon .list .checked {
  position: absolute;
  right: -1rpx;
  bottom: -1rpx;
  z-index: 10;
  width: 40rpx;
  height: 40rpx;
}

.vip-coupon .list .active {
  width: 710rpx;
  border: 4rpx solid #ffe120;
}

.vip-coupon .list .active .cut-box .circle {
  border: 4rpx solid #ffe120;
}

.vip-coupon .list .active .cut-box .shelter {
  width: 24rpx;
  height: 18rpx;
}

.vip-coupon .list .active .cut-box .top {
  top: -14rpx;
}

.vip-coupon .list .active .cut-box .top .shelter {
  top: -12rpx;
  left: -4rpx;
}

.vip-coupon .list .active .cut-box .bottom {
  bottom: -14rpx;
}

.vip-coupon .list .active .cut-box .bottom .shelter {
  bottom: -12rpx;
  left: -4rpx;
}

.vip-coupon .list .transpar {
  border: 2rpx solid rgba(220, 223, 230, 0.3);
}

.vip-coupon .list .transpar .coupon-box,
.vip-coupon .list .transpar .cut-box,
.vip-coupon .list .transpar .infos {
  opacity: 0.3;
}

.vip-coupon .no-data {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 232rpx;
  width: 100%;
  flex: 1;
  flex-direction: column;
}

.vip-coupon .no-data .cover {
  width: 100%;
  height: 480rpx;
}

.vip-coupon .no-data .tips {
  overflow: hidden;
  padding: 0 20rpx;
  width: 100%;
  text-align: center;
  text-overflow: ellipsis;
  white-space: nowrap;
  box-sizing: border-box;
}

.vip-coupon .no-data .tips text {
  font-size: 28rpx;
  line-height: 34rpx;
  color: #999;
}
