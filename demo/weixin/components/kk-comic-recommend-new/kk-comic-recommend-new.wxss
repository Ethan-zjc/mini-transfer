.comic-recommend {
  padding-bottom: 24rpx;
}

.comic-recommend-border {
  border-top: 1px solid #e8e8e8;
}

.comic-recommend-home {
  width: 702rpx;
  height: 80rpx;
  background: #FCE140;
  border-radius: 100rpx;
  margin: 24rpx auto 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.comic-recommend-home image {
  width: 36rpx;
  height: 36rpx;
}

.comic-recommend-home text {
  color: #442509;
  font-size: 28rpx;
  font-weight: 400;
  margin-left: 12rpx;
}

.comic-recommend-top {
  height: 98rpx;
  display: flex;
  align-items: center;
}

.comic-recommend-top .recommend-top-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  padding-left: 24rpx;
  padding-right: 24rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  flex: 1;
}

.comic-recommend-top .recommend-top-more {
  font-size: 24rpx;
  color: #999;
  padding-right: 32rpx;
  display: flex;
  align-items: center;
}

.comic-recommend-top .recommend-top-more image {
  width: 24rpx;
  height: 24rpx;
}

.comic-recommend-content .more {
  background: rgba(0, 0, 0, 0.05);
  border-radius: 8rpx;
  height: 268rpx;
  width: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  flex-shrink: 0;
}

.comic-recommend-content .more-icon {
  margin-bottom: 8rpx;
}

.comic-recommend-content .more-icon image {
  width: 26rpx;
  height: 26rpx;
}

.comic-recommend-content .more-text {
  font-size: 26rpx;
  line-height: 37rpx;
  color: #999;
  display: flex;
  flex-direction: column;
}

.comic-recommend-base {
  height: 362rpx;
  overflow: hidden;
  font-family: PingFangSC-Regular, PingFang SC;
}

.comic-recommend-base .recommend-base-list {
  display: flex;
  height: auto;
  padding-bottom: 20rpx;
  padding-left: 24rpx;
}

.comic-recommend-base .recommend-base-box {
  padding-right: 16rpx;
  width: 200rpx;
}

.comic-recommend-base .recommend-base-box .info {
  width: 200rpx;
  height: 268rpx;
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
}

.comic-recommend-base .recommend-base-box .info .info-cover {
  overflow: hidden;
  border-radius: 12rpx;
}

.comic-recommend-base .recommend-base-box .info .info-tips {
  background: linear-gradient(180deg, transparent 0%, rgba(0, 0, 0, 0.01) 10%, rgba(0, 0, 0, 0.04) 20%, rgba(0, 0, 0, 0.07) 30%, rgba(0, 0, 0, 0.11) 40%, rgba(0, 0, 0, 0.16) 49%, rgba(0, 0, 0, 0.21) 58%, rgba(0, 0, 0, 0.26) 67%, rgba(0, 0, 0, 0.31) 75%, rgba(0, 0, 0, 0.36) 82%, rgba(0, 0, 0, 0.4) 88%, rgba(0, 0, 0, 0.44) 93%, rgba(0, 0, 0, 0.47) 97%, rgba(0, 0, 0, 0.49) 99%, rgba(0, 0, 0, 0.5) 100%);
  border-radius: 0px 0px 12rpx 12rpx;
  height: 88rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  text-align: right;
}

.comic-recommend-base .recommend-base-box .info .info-tips text {
  font-weight: 500;
  font-size: 22rpx;
  line-height: 28rpx;
  color: #fff;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 50rpx 12rpx 0 0;
  display: block;
}

.comic-recommend-base .recommend-base-box .info .info-tag {
  position: absolute;
  height: 44rpx;
  left: 0rpx;
  top: 0rpx;
  text-align: left;
  display: flex;
  align-items: center;
  background: rgba(253, 226, 61, 0.98);
  padding-left: 12rpx;
}

.comic-recommend-base .recommend-base-box .info .info-tag .bg {
  position: absolute;
  width: 30rpx;
  height: 44rpx;
  right: -20rpx;
  top: 0;
  z-index: 3;
}

.comic-recommend-base .recommend-base-box .info .info-tag .bg image {
  display: block;
  width: 100%;
  height: 100%;
}

.comic-recommend-base .recommend-base-box .info .info-tag text {
  position: relative;
  z-index: 5;
  display: block;
  font-size: 20rpx;
  color: #282028;
  font-weight: 600;
  max-width: 160rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.comic-recommend-base .recommend-base-box .title {
  font-size: 30rpx;
  color: #222;
  font-weight: 500;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-top: 12rpx;
  height: 42rpx;
  line-height: 42rpx;
}

.comic-recommend-base .recommend-base-box .subtitle {
  margin-top: 4rpx;
  font-size: 26rpx;
  height: 36rpx;
  line-height: 36rpx;
  color: #999;
  font-weight: 400;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.comic-recommend-nav {
  margin-bottom: 28rpx;
  height: 56rpx;
  overflow: hidden;
}

.comic-recommend-nav-scroll {
  white-space: nowrap;
  padding-bottom: 20rpx;
  padding-left: 24rpx;
  display: flex;
}

.comic-recommend-nav .nav-tap {
  padding: 0 24rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Regular,PingFang SC;
  font-weight: 400;
  height: 56rpx;
  color: #999;
  box-sizing: border-box;
  border-radius: 28rpx;
  background: #fff;
  border: 2rpx solid #fff;
  margin-right: 12rpx;
  display: flex;
  align-items: center;
}

.comic-recommend-nav .active {
  font-weight: 600;
  color: #FFAC00;
  background: #FFF7E0;
  border: 2rpx solid #FFE5AF;
  font-family: PingFangSC-Semibold, PingFang SC;
}
