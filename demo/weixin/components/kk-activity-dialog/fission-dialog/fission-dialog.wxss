.warp {
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 9999;
  display: flex;
  overflow: hidden;
  justify-content: center;
  align-items: center;
}

.warp.showDialog {
  bottom: 0;
  height: 100%;
  animation: fade-in ease-in-out 0.4s 1 alternate forwards;
}

.warp.hideDialog {
  height: 0;
}

.warp-dialog {
  z-index: 1;
  width: 552rpx;
  height: auto;
  position: relative;
  text-align: center;
  opacity: 0;
  transform: translateY(-10%);
}

.warp-dialog.showContain {
  animation: popupAnimate 0.4s linear forwards;
}

.warp-dialog .bg {
  width: 100%;
}

.warp-dialog .bg.award {
  height: 554rpx;
}

.warp-dialog .bg.accept {
  height: 668rpx;
}

.warp-dialog .close-wrap {
  position: absolute;
  z-index: 2;
  top: 170rpx;
  right: 2rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: transparent;
}

.warp-dialog .close {
  width: 16rpx;
  height: 16rpx;
  margin-top: 14rpx;
  margin-left: 8rpx;
}

.warp-dialog .contain {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 0 64rpx;
}

.warp-dialog .contain.award {
  padding-top: 316rpx;
}

.warp-dialog .contain.accept {
  padding-top: 328rpx;
}

.warp-dialog .team-txt .title {
  font-size: 32rpx;
  font-family: PingFang SC;
  color: black;
  display: block;
  height: 32rpx;
  line-height: 32rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.warp-dialog .team-txt .desc {
  font-size: 28rpx;
  font-family: PingFang SC;
  color: black;
  line-height: 36rpx;
  opacity: 0.5;
  text-align: justify;
  max-height: 120rpx;
  min-height: 120rpx;
  overflow: hidden;
  margin: 32rpx 0;
}

.warp-dialog .award-txt .title {
  font-size: 32rpx;
  font-family: PingFang SC Medium;
  color: #FF4CCD;
  display: block;
  line-height: 32rpx;
  font-weight: bold;
}

.warp-dialog .award-txt .desc {
  line-height: 26rpx;
  font-size: 26rpx;
  font-family: PingFang SC Regular;
  color: #7F7F7F;
  margin: 32rpx 0;
  display: block;
}

.warp-dialog .btn {
  width: 426rpx;
  height: 90rpx;
  line-height: 90rpx;
  background: #ff4ccd;
  border-radius: 45rpx;
  margin: auto;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: white;
}

@keyframes fade-in {
  0% {
    background-color: rgba(0, 0, 0, 0.1);
  }
  100% {
    background-color: rgba(0, 0, 0, 0.7);
  }
}

@keyframes popupAnimate {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}
