<view
    class="warp {{ show ? 'showDialog' : 'hideDialog' }}"
    hover-class="none"
    hover-stop-propagation="false"
    catchtouchmove>
    <!-- 图片资源 -->
    <!-- <view style="display: none;">
        <image wx:for="{{ imgList }}" src="{{ item.img }}"></image>
    </view> -->

    <view class="warp-dialog {{ show ? 'showContain' : 'hideContain' }}">
        <!-- 关闭按钮 -->
        <view class="close-wrap" bindtap="close">
            <image class="close" src="/images/activity/task-close.png"></image>
        </view>

        <view class="title">{{ infos.title }}</view>
        <view class="desc">{{ infos.step[currentSwiper].desc }}</view>
        <view class="swiper-warp">
            <swiper
                class="swiper"
                duration="{{ 300 }}"
                current="{{ currentSwiper }}"
                bindchange="swiperChange">
                <block wx:for="{{infos.step}}" wx:key="id">
                    <swiper-item class="swiper-item">
                        <view class="swiper-item">
                            <kk-cover src="{{item.img}}" width="{{ 464 }}" height="{{ 260 }}"/>
                        </view>
                    </swiper-item>
                </block>
            </swiper>

            <!--重置小圆点的样式 -->
            <view class="dots"> 
                <block wx:for="{{ infos.step }}" wx:key="id"> 
                    <view class="dot{{index == currentSwiper ? ' active' : ''}}"></view> 
                </block> 
            </view>
        </view>
        
        <!-- 按钮 -->
        <view class="btns" wx:if="{{ sence == 'wechat_1035' && currentSwiper == 2 }}">
            <view class="copy btn" bindtap="copyAddress">复制公众号</view>
            <view class="btn" data-ind="{{ currentSwiper }}" bindtap="eventBtn">{{ currentSwiper == 2 ? '我知道了' : '下一步' }}</view>
        </view>

        <view wx:else class="btn" data-ind="{{ currentSwiper }}" bindtap="eventBtn">{{ currentSwiper == 2 ? '我知道了' : '下一步' }}</view>
    </view>
</view>
  