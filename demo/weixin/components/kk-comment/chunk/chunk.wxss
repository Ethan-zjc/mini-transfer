.chunk {
  padding: 32rpx 24rpx;
  box-sizing: border-box;
}

.chunk.d_chunk {
  padding: 32rpx 24rpx 24rpx;
}

.chunk-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.chunk-header .user {
  display: flex;
  align-items: center;
}

.chunk-header .user .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
}

.chunk-header .user .avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.chunk-header .user .txt {
  font-size: 28rpx;
  margin-left: 16rpx;
  color: #666666;
}

.chunk-header .praise {
  font-size: 24rpx;
  color: #999999;
}

.chunk .content {
  width: 100%;
  padding-left: 76rpx;
  box-sizing: border-box;
}

.chunk .content .main-txt {
  font-size: 32rpx;
  line-height: 48rpx;
  color: #222222;
  vertical-align: top;
  word-wrap: break-word;
  word-break: break-all;
}

.chunk .content .main-img, .chunk .content .main-voice {
  width: 28rpx;
  height: 28rpx;
  display: inline-block;
  vertical-align: middle;
}

.chunk .reply {
  margin-top: 16rpx;
  width: 100%;
  height: auto;
  background: #F7F9FA;
  border-radius: 10rpx;
  padding: 12rpx 20rpx 20rpx;
  box-sizing: border-box;
}

.chunk .reply-chunk .name {
  font-size: 28rpx;
  color: #222222;
  line-height: 44rpx;
  margin-right: 16rpx;
}

.chunk .reply-chunk .txt {
  font-size: 28rpx;
  color: #666666;
  line-height: 44rpx;
  word-wrap: break-word;
  word-break: break-all;
}

.chunk .reply-img, .chunk .reply-voice {
  width: 28rpx;
  height: 28rpx;
  display: inline-block;
  vertical-align: middle;
}

.chunk .reply .more {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
  height: 28rpx;
}

.chunk .reply .more-txt {
  font-size: 28rpx;
  color: #6F93BD;
  line-height: 28rpx;
}

.chunk .reply .more-img {
  width: 24rpx;
  height: 24rpx;
}
