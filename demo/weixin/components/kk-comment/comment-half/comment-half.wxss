.half {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 99999;
  background: rgba(0, 0, 0, 0.5);
}

.half-body {
  width: 100%;
  position: absolute;
  height: 80%;
  bottom: 0;
  background: #fff;
  transform: translateY(100%);
  transition: all .2s linear;
  box-sizing: border-box;
}

.half-body.ipx {
  padding-bottom: 68rpx;
}

.half-body.show {
  transform: translateY(0);
}

.half-body.hide {
  transform: translateY(100%);
}

.half-body .header {
  width: 100%;
  height: 96rpx;
  padding: 0 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
}

.half-body .header .close {
  width: 138rpx;
  height: 48rpx;
}

.half-body .header .close-img {
  width: 48rpx;
  height: 100%;
}

.half-body .header .total {
  font-size: 32rpx;
  color: #222222;
}

.half-body .header .types {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 142rpx;
}

.half-body .header .types .type {
  font-size: 26rpx;
  color: #999999;
}

.half-body .header .types .type.active {
  color: #222222;
}

.half-body .header .types .interval {
  width: 2rpx;
  height: 20rpx;
  background: #EBEBEB;
  margin: 0 16rpx;
}

.half-body .list {
  height: calc(100% - 98rpx);
}

.half-body .list .chunk-item {
  border-top: 1rpx solid #EEEEEE;
}
