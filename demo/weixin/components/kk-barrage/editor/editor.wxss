.editor {
    position: relative;
    width: 750rpx;
    height: 92rpx;
    background: #fff;
    font-family: PingFangSC-Regular, PingFang SC;
    box-sizing: border-box;
    display: flex;
    padding: 20rpx 0 8rpx 32rpx;
    transform: translateY(0);
}

.editor.editing {
    height: 750rpx;
    padding: 14rpx 0 669rpx 32rpx;
    transition: transform 0.1s;
}

input {
    width: 616rpx;
    height: 64rpx;
    border-radius: 48rpx;
    opacity: 0.9;
    border: 1px solid rgba(231, 231, 236, 1);
    padding-left: 32rpx;
}

.placeholder {
    font-size: 28rpx;
    color: rgba(216, 216, 216, 1);
}

.send {
    font-size: 28rpx;
    color: rgba(85, 85, 85, 1);
    height: 64rpx;
    line-height: 64rpx;
    text-align: center;
    width: 132rpx;
    margin-left: 2rpx;
}

@keyframes enter {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

.status-btn {
    position: absolute;
    left: 32rpx;
    top: -80rpx;
    width: 108rpx;
    height: 48rpx;
    line-height: 48rpx;
    background: rgba(66, 66, 66, 0.5);
    text-align: center;
    color: #fff;
    font-size: 0;
    border-radius: 24rpx;
    animation: enter 0.3s 0.3s 1 normal both;
}

.status-btn image {
    display: inline-block;
    vertical-align: middle;
    width: 16rpx;
    height: 16rpx;
    background: transparent;
}

.status-btn text {
    font-size: 24rpx;
    vertical-align: middle;
    margin-left: 5rpx;
}
