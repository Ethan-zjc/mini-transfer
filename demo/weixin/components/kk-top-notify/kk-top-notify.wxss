.normal-size {
  font-size: 26rpx;
  font-weight: 400;
}

.normal-size .yellow {
  color: #FDE23D;
}

.notify {
  position: fixed;
  display: flex;
  flex-wrap: nowrap;
  right: 32rpx;
  top: 4rpx;
  z-index: 10999;
}

.notify-info {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  max-width: 686rpx;
  width: 686rpx;
}

.notify-layout {
  padding-top: 12rpx;
}

.notify-side {
  width: auto;
}

.notify-tip {
  position: relative;
  right: 110rpx;
  width: 27rpx;
  height: 12rpx;
  margin-right: -32rpx;
}

.notify-tip image {
  width: 100%;
  height: 100%;
}

.notify-content {
  width: 100%;
  border-radius: 16rpx;
  font-size: 28rpx;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  display: flex;
  align-items: center;
  padding: 0rpx 0rpx 0rpx 32rpx;
  box-sizing: border-box;
}

.notify-text {
  flex: 1;
  min-width: 0;
  width: 100%;
  padding: 18rpx 0;
  display: flex;
  flex-direction: column;
}

.notify-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
}

.notify-icon image {
  width: 100%;
  height: 100%;
}

.notify-title {
  font-family: PingFangSC-Regular, PingFang SC;
  flex: 1;
  min-width: 0;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  height: 40rpx;
  line-height: 40rpx;
}

.notify-subtitle {
  font-family: PingFangSC-Regular, PingFang SC;
  flex: 1;
  min-width: 0;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  height: 40rpx;
  line-height: 40rpx;
}

.notify-close {
  margin: 0 24rpx;
  width: 36rpx;
  height: 36rpx;
}

.notify-close image {
  width: 100%;
  height: 100%;
}
