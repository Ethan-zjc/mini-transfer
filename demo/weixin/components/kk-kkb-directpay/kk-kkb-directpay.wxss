.kk-buykkb-popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  z-index: 999;
  display: flex;
  justify-content: center;
}

.kk-buykkb-popup .popup-content {
  margin-top: 85rpx;
  position: relative;
  width: 745rpx;
  height: 802rpx;
}

.kk-buykkb-popup .popup-content .popup-content-bg {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
  width: 100%;
  height: 100%;
}

.kk-buykkb-popup .popup-content .popup-content-bg image {
  display: block;
  width: 100%;
  height: 100%;
}

.kk-buykkb-popup .popup-content .content {
  position: absolute;
  top: 202rpx;
  left: 0;
  right: -1rpx;
  margin: 0 auto;
  width: 540rpx;
  height: 600rpx;
  border-radius: 24rpx;
  z-index: 10;
}

.kk-buykkb-popup .popup-content .content .top {
  padding-top: 91rpx;
}

.kk-buykkb-popup .popup-content .content .top .title {
  font-size: 36rpx;
  line-height: 50rpx;
  font-family: PingFangSC-Regular,PingFang SC;
  font-weight: 400;
  color: #ff5a00;
  text-align: center;
}

.kk-buykkb-popup .popup-content .content .top .bug-text {
  padding: 6rpx 0 81rpx 0;
  line-height: 33rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Light,PingFang SC;
  font-weight: 300;
  color: #999999;
  text-align: center;
}

.kk-buykkb-popup .popup-content .content .top .bug-text.has-coupon {
  padding-bottom: 63rpx;
}

.kk-buykkb-popup .popup-content .content .top .coupon-text {
  width: 100%;
  font-size: 24rpx;
  text-align: center;
  font-weight: 300;
  color: #999999;
}

.kk-buykkb-popup .popup-content .content .topic-list {
  box-sizing: border-box;
  padding: 0 6rpx;
  display: flex;
  justify-items: center;
  justify-content: space-between;
}

.kk-buykkb-popup .popup-content .content .topic-list .list-item {
  padding: 0 4rpx;
  width: 168rpx;
}

.kk-buykkb-popup .popup-content .content .topic-list .list-item .cover {
  margin-bottom: 9rpx;
  width: 168rpx;
  height: 224rpx;
  border-radius: 8rpx;
}

.kk-buykkb-popup .popup-content .content .topic-list .list-item .cover image {
  border-radius: 8rpx;
}

.kk-buykkb-popup .popup-content .content .topic-list .list-item .des {
  width: 100%;
  box-sizing: border-box;
  padding-left: 10rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}

.kk-buykkb-popup .popup-content .content .topic-list .list-item .title {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Light,PingFang SC;
  font-weight: 300;
  color: #333333;
}

.kk-buykkb-popup .popup-content .content .topic-list .list-item .tag {
  font-size: 24rpx;
  line-height: 32rpx;
  font-family: PingFangSC-Light,PingFang SC;
  font-weight: 300;
  color: #999999;
}

.kk-buykkb-popup .popup-content .content .close {
  position: absolute;
  left: 0;
  bottom: -107rpx;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
}

.kk-buykkb-popup .popup-content .content .close .btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.kk-buykkb-popup .popup-content .content .close .btn image {
  width: 100%;
  height: 100%;
}
