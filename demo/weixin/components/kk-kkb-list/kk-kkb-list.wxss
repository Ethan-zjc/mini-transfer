.kkb-list {
  position: relative;
  padding: 0 32rpx;
  width: 100%;
  color: red;
  box-sizing: border-box;
}

.kkb-list .recharge-list {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 32rpx;
  width: 100%;
  box-sizing: border-box;
  flex-wrap: wrap;
}

.kkb-list .recharge-list::after {
  display: block;
  width: 224rpx;
  height: 0;
  content: '';
}

.kkb-list .recharge-list .list-items-wrap {
  box-sizing: border-box;
  position: relative;
  margin-bottom: 16rpx;
  width: 218rpx;
  height: 154rpx;
}

.kkb-list .recharge-list .no-right {
  margin-right: 0;
  width: 218rpx;
}

.kkb-list .recharge-list .items {
  position: relative;
  width: 100%;
  height: 100%;
  border: 2rpx solid #f5f5f5;
  border-radius: 12rpx;
  box-sizing: border-box;
}

.kkb-list .recharge-list .items.items-active {
  border: 2rpx solid rgba(255, 117, 26, 0.6);
  background: rgba(255, 117, 26, 0.06);
}

.kkb-list .recharge-list .items .kkb {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
  box-sizing: border-box;
  height: 40rpx;
}

.kkb-list .recharge-list .items .kkb .kkb-icon {
  width: 40rpx;
  height: 40rpx;
}

.kkb-list .recharge-list .items .kkb text {
  margin-left: 4rpx;
  line-height: 40rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, 'PingFang SC';
  font-weight: bold;
  color: #333333;
}

.kkb-list .recharge-list .items .rmb {
  margin-top: 4rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, 'PingFang SC';
  text-align: center;
  color: #999;
  line-height: 30rpx;
}

.kkb-list .recharge-list .items .items-label {
  position: absolute;
  top: -1rpx;
  right: -1rpx;
  z-index: 1;
  width: 100rpx;
  height: 32rpx;
  background-position: right;
  background-repeat: no-repeat;
  background-size: auto 100%;
}

.kkb-list .recharge-list .shot-activity .items .kkb {
  margin-top: 30rpx;
}

.kkb-list .recharge-list .shot-activity .items-free-kkb {
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 34rpx;
  text-align: center;
  background: rgba(255, 117, 26, 0.1);
}

.kkb-list .recharge-list .shot-activity .items-free-kkb text {
  overflow: hidden;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, 'PingFang SC';
  font-weight: bold;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #ff7a15;
}

.kkb-list .vip .items.items-active {
  border: 2rpx solid #d223d7;
  background: #f9f6ff;
}

.kkb-list .vip .shot-activity .items-free-kkb {
  background: rgba(210, 35, 215, 0.1);
}

.kkb-list .vip .shot-activity .items-free-kkb text {
  color: #d223d7;
}
