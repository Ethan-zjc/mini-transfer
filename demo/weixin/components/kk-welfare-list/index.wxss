.kk-green-hands-list {
  position: relative;
  padding: 0 24rpx;
  margin-bottom: 24rpx;
}

.kk-green-hands-list .topics-info {
  overflow: hidden;
  border-radius: 16rpx;
  padding-bottom: 28rpx;
  position: relative;
}

.kk-green-hands-list .topics-mask {
  position: absolute;
  left: 0;
  top: 0;
  background: transparent;
  width: 100%;
  height: 100%;
  z-index: 9;
}

.kk-green-hands-list .topics-bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
}

.kk-green-hands-list .topics-bg-color {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
  background-color: #e27660;
  opacity: .92;
}

.kk-green-hands-list .topics-bg-img {
  position: relative;
  z-index: 1;
}

.kk-green-hands-list .topics-top {
  position: relative;
  z-index: 5;
  height: 50rpx;
  padding: 32rpx 24rpx;
  display: flex;
  align-items: center;
}

.kk-green-hands-list .topics-top-title {
  font-family: PingFang SC;
  font-style: normal;
  font-weight: 500;
  font-size: 36rpx;
  line-height: 50rpx;
  color: #FFFFFF;
  flex: 1;
  display: flex;
  align-items: center;
}

.kk-green-hands-list .topics-top-title image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 16rpx;
}

.kk-green-hands-list .topics-top-time {
  font-family: PingFang SC;
  font-style: normal;
  font-weight: normal;
  font-size: 24rpx;
  font-weight: 600;
  text-align: right;
  color: #FFFFFF;
  display: flex;
}

.kk-green-hands-list .topics-top-time .date {
  width: 40rpx;
  height: 42rpx;
  line-height: 42rpx;
  text-align: center;
  background: #C85A43;
  border-radius: 4rpx;
  display: block;
}

.kk-green-hands-list .topics-top-time .unit {
  display: block;
  padding: 0 6rpx;
}

.kk-green-hands-list .topics-top-more {
  font-family: PingFang SC;
  font-style: normal;
  font-weight: normal;
  font-size: 26rpx;
  line-height: 26rpx;
  text-align: right;
  color: #FFFFFF;
  display: flex;
  align-items: center;
}

.kk-green-hands-list .topics-top-more image {
  width: 22rpx;
  height: 22rpx;
}

.kk-green-hands-list .topics-list {
  position: relative;
  z-index: 5;
  overflow: hidden;
  height: 270rpx;
}

.kk-green-hands-list .topics-scroll {
  display: flex;
  white-space: nowrap;
  padding: 0 24rpx 44rpx;
}

.kk-green-hands-list .topics-item {
  width: 168rpx;
  margin-right: 16rpx;
}

.kk-green-hands-list .topics-item-pic {
  width: 168rpx;
  height: 222rpx;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
}

.kk-green-hands-list .topics-item-pic .bottom {
  box-sizing: border-box;
  padding: 46rpx 0rpx 12rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  background: linear-gradient(180deg, transparent 0%, rgba(0, 0, 0, 0.01) 10%, rgba(0, 0, 0, 0.04) 20%, rgba(0, 0, 0, 0.07) 30%, rgba(0, 0, 0, 0.11) 40%, rgba(0, 0, 0, 0.16) 49%, rgba(0, 0, 0, 0.21) 58%, rgba(0, 0, 0, 0.26) 67%, rgba(0, 0, 0, 0.31) 75%, rgba(0, 0, 0, 0.36) 82%, rgba(0, 0, 0, 0.4) 88%, rgba(0, 0, 0, 0.44) 93%, rgba(0, 0, 0, 0.47) 97%, rgba(0, 0, 0, 0.49) 99%, rgba(0, 0, 0, 0.5) 100%);
  border-radius: 0px 0px 12rpx 12rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular,PingFang SC;
  font-weight: 400;
  color: white;
  text-shadow: 0px 1px 8rpx rgba(0, 0, 0, 0.24);
  text-align: right;
}

.kk-green-hands-list .topics-item-pic .bottom text {
  height: 30rpx;
  line-height: 30rpx;
  overflow: hidden;
  display: block;
  margin: 0 12rpx;
}

.kk-green-hands-list .topics-item-title {
  margin-top: 12rpx;
  font-family: PingFang SC;
  font-style: normal;
  font-weight: normal;
  font-size: 30rpx;
  line-height: 36rpx;
  height: 36rpx;
  color: #FFFFFF;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.kk-green-hands-list .topics-after {
  width: 8rpx;
}

.kk-green-hands-list .topics-after-pic {
  width: 8rpx;
  height: 222rpx;
  overflow: hidden;
}

.kk-green-hands-list .topics-more {
  position: relative;
  z-index: 6;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  margin: 24rpx 24rpx 0;
  font-size: 28rpx;
  color: #fff;
  opacity: .75;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 12rpx;
}

.kk-green-hands-list .topics-animation {
  position: absolute;
  bottom: -60rpx;
  right: 8rpx;
  z-index: 5;
  width: 200rpx;
  height: 200rpx;
}
