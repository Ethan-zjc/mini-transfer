@keyframes enter {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}
.movable-area {
    position: absolute;
}

.barrage-editor {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.7);
    font-family: PingFangSC-Regular, PingFang SC;
    animation: enter 0.2s ease 0s 1 normal both;
}

.barrage-wrap {
    display: inline-block;
    border: 1px solid rgba(253, 226, 61, 1);
    font-size: 0;
}
.barrage {
    display: inline-block;
    padding: 0 24rpx;
    white-space: nowrap;
    box-sizing: border-box;
    height: 80rpx;
    text-align: center;
    color: #fff;
    border-radius: 40rpx;
    background: rgba(0, 0, 0, 0.6);
    line-height: 80rpx;
    font-size: 32rpx;
    min-width: 150rpx;
}

.btn-wrap {
    position: absolute;
    width: 100%;
    bottom: 60rpx;
    padding: 0 32rpx 0 32rpx;
    box-sizing: border-box;
    left: 0;
    display: flex;
    justify-content: space-between;
}

.btn-wrap.iphonex {
    bottom: 128rpx;
}

.cancel,
.submit {
    width: 72rpx;
    height: 36rpx;
    font-size: 36rpx;
    font-weight: 400;
    line-height: 36rpx;
}

.cancel {
    color: #fff;
}

.submit {
    color: rgba(253, 226, 61, 1);
}
