.kk-new-welfare {
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  z-index: 6999;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.3);
}

.kk-new-welfare .intro {
  padding: 48rpx 40rpx;
  box-sizing: border-box;
  width: 574rpx;
  height: 782rpx;
  background: #fff;
  border-radius: 28rpx;
  transition: all .5s;
  opacity: 0;
  transform: scale(0.4);
}

.kk-new-welfare .intro.show {
  opacity: 1;
  transform: scale(1);
}

.kk-new-welfare .intro.hide {
  opacity: 0;
}

.kk-new-welfare .title {
  text-align: center;
  color: #222;
  font-size: 34rpx;
  font-weight: 500;
  line-height: 42rpx;
  height: 42rpx;
  overflow: hidden;
}

.kk-new-welfare .subtitle {
  margin: 16rpx 0;
  font-size: 30rpx;
  color: #666;
  line-height: 36rpx;
  text-align: center;
  height: 38rpx;
  overflow: hidden;
}

.kk-new-welfare .top {
  margin-bottom: 48rpx;
}

.kk-new-welfare .get-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  color: #222;
  background: #FFE120;
  border-radius: 44px;
  margin-bottom: 32rpx;
}

.kk-new-welfare .abandon {
  text-align: center;
  width: 180rpx;
  margin: auto;
  color: #999;
  font-size: 28rpx;
  line-height: 34rpx;
}
