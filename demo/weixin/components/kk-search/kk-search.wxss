.kk-search {
  position: relative;
  z-index: 1;
  width: 100%;
}

.wrap {
  box-sizing: border-box;
  overflow: hidden;
  display: flex;
  align-items: center;
}

.wrap .logo {
  flex-shrink: 0;
}

.wrap .search {
  flex-grow: 1;
  position: relative;
  margin-left: 24rpx;
  background-color: #F7F9FA;
  border-radius: 32rpx;
  padding: 0 18rpx 0 60rpx;
  color: #999;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.wrap .search-hover {
  opacity: 0.8;
}

.wrap .search .icon {
  position: absolute;
  left: 18rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 36rpx;
  height: 36rpx;
}

.wrap .search .swiper-wrap {
  position: absolute;
  left: 60rpx;
  top: 50%;
  transform: translateY(-50%);
  width: calc(100% - 80rpx);
}

.wrap .search .swiper-wrap .swiper-item {
  width: 100%;
  height: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.wrap-active .search {
  background: rgba(247, 249, 250, 0.7);
}
