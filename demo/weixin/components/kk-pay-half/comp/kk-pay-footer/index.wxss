.kk-footer {
  width: auto;
  background: #fff;
}

.kk-footer .pay-dialog-bottom {
  box-sizing: border-box;
  padding-right: 32rpx;
  display: flex;
  align-items: center;
  background: #fff;
  height: 80rpx;
  box-shadow: 0px -2rpx 8rpx 0px rgba(0, 0, 0, 0.04);
}

.kk-footer .pay-dialog-bottom .topic-btn {
  margin-right: 12rpx;
  width: 110rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #fffcfb;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #442509;
  text-align: center;
}

.kk-footer .pay-dialog-bottom .topic-btn-vip {
  background: #fcfbff;
  color: #5b29f4;
}

.kk-footer .pay-dialog-bottom .text {
  font-size: 24rpx;
  line-height: 80rpx;
  color: #b2b4c4;
}

.kk-footer .pay-dialog-bottom .invest {
  display: flex;
  align-items: center;
  padding: 0 24rpx;
}

.kk-footer .pay-dialog-bottom .invest .invest-text {
  padding-right: 8rpx;
  font-size: 24rpx;
  color: #333;
}

.kk-footer .pay-dialog-bottom .invest image {
  width: 8rpx;
  height: 14rpx;
}

.kk-footer .pay-dialog-bottom .stance {
  flex: 1;
}

.kk-footer .pay-dialog-bottom .auto-pay {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #333;
}

.kk-footer .pay-dialog-bottom .auto-pay text {
  padding-left: 8rpx;
}

.kk-footer .pay-dialog-bottom .auto-pay image {
  width: 28rpx;
  height: 28rpx;
}

.kk-footer .pay-dialog-bottom .auto-pay .btn image {
  width: 24rpx;
  height: 24rpx;
}

.kk-footer .blank {
  position: relative;
  z-index: 3;
  height: 66rpx;
  background: #fff;
  width: 100%;
}

.kk-footer .pay-dialog-middle-mini {
  padding-bottom: 30rpx;
}

.kk-footer .vip-right-wrap-iosx {
  padding-top: 30rpx;
}

.kk-footer .vip-right-wrap-ios {
  padding-bottom: 30rpx;
}

.kk-footer .vip-right-wrap {
  display: flex;
  justify-content: center;
  justify-items: center;
  background: #fff;
}

.kk-footer .limit-bottom {
  position: relative;
  width: 100%;
  height: 80rpx;
  bottom: 0;
  box-sizing: border-box;
  box-shadow: 0px -2rpx 8rpx 0px rgba(0, 0, 0, 0.04);
}

.kk-footer .limit-bottom .topic-btn {
  margin-right: 12rpx;
  width: 110rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #fcfbff;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #5b29f4;
  text-align: center;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 999;
}

.kk-footer .limit-bottom .topic-btn.free {
  position: relative;
  display: inline-block;
}

.kk-footer .limit-bottom .balance {
  font-size: 24rpx;
  line-height: 80rpx;
  color: #b2b4c4;
  display: inline-block;
}

.kk-footer .limit-bottom .limit-kkb-btn {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.kk-footer .limit-bottom .limit-kkb-btn text {
  font-size: 24rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #5d04b5;
  line-height: 30rpx;
}

.kk-footer .limit-bottom .limit-kkb-btn .arrow {
  width: 10rpx;
  height: 17.5rpx;
  margin-left: 6rpx;
  display: inline-block;
  margin-top: 8rpx;
}

.kk-footer .limit-bottom .limit-kkb-btn-box {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}

.kk-footer .content {
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  justify-content: center;
  justify-items: center;
}

.kk-footer .content .text {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #5b29f4;
}

.kk-footer .content .arrow {
  width: 10rpx;
  height: 18rpx;
  margin-left: 6rpx;
  margin-top: 9rpx;
}
