.pay-gift {
  background-color: #fff;
}

.pay-gift .relativeBox {
  position: relative;
  width: 686rpx;
  height: 88rpx;
}

.pay-gift .relativeBox .bubble {
  position: absolute;
  top: -8rpx;
  right: 0rpx;
  padding: 0 12rpx;
  height: 34rpx;
  font-size: 18rpx;
  font-weight: 500;
  border-radius: 15rpx 15rpx 15rpx 4rpx;
  text-align: center;
  color: white;
  background: linear-gradient(90deg, #ff257f 0%, #ff0047 100%);
  line-height: 34rpx;
}

.pay-gift .pay-gift-title {
  font-size: 44rpx;
  font-family: PingFangSC-Medium, 'PingFang SC';
  font-weight: 500;
  text-align: center;
  color: #333;
}

.pay-gift .pay-gift-title text {
  color: #5b29f4;
}

.pay-gift .pay-gift-subtitle {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 8rpx;
}

.pay-gift .pay-gift-subtitle .text-box {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 16rpx;
  width: auto;
  height: 40rpx;
  border-radius: 8rpx;
  background: #fdeb3d;
  transform: skew(-10deg);
}

.pay-gift .pay-gift-subtitle .text-box .text {
  height: 20rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Medium, 'PingFang SC';
  font-weight: 500;
  text-align: center;
  color: #442509;
  line-height: 20rpx;
  transform: skew(10deg);
}

.pay-gift .pay-gift-content {
  padding: 20rpx 40rpx;
}

.pay-gift .pay-gift-content .pay-gift-list-box {
  padding: 24rpx;
  width: 100%;
  height: 368rpx;
  border-radius: 16rpx;
  background: #f9f6ff;
  box-sizing: border-box;
}

.pay-gift .pay-gift-content .pay-gift-list-box .pay-gift-list-item {
  position: relative;
  display: flex;
  padding: 16rpx;
  width: 100%;
  height: 152rpx;
  border-radius: 8rpx;
  background: #fff;
  flex-direction: row;
  box-sizing: border-box;
}

.pay-gift .pay-gift-content .pay-gift-list-box .pay-gift-list-item:first-child {
  margin-bottom: 16rpx;
}

.pay-gift .pay-gift-content .pay-gift-list-box .pay-gift-list-item .right-content {
  overflow: hidden;
  flex: 1;
}

.pay-gift .pay-gift-content .pay-gift-list-box .pay-gift-list-item .list-icon {
  position: relative;
  overflow: hidden;
  margin-right: 16rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
}

.pay-gift .pay-gift-content .pay-gift-list-box .pay-gift-list-item .list-icon .award-image {
  display: block;
  width: 120rpx;
  height: 120rpx;
}

.pay-gift .pay-gift-content .pay-gift-list-box .pay-gift-list-item .list-icon .label-text {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 11;
  overflow: hidden;
  padding-right: 6rpx;
  padding-left: 5rpx;
  max-width: 90%;
  height: 28rpx;
  font-size: 18rpx;
  font-family: PingFangSC-Medium, 'PingFang SC';
  font-weight: 500;
  text-align: center;
  white-space: nowrap;
  color: #fff;
  background-color: #5b29f4;
  box-sizing: border-box;
  border-top-left-radius: 8rpx;
  border-top-right-radius: 14rpx;
  border-bottom-right-radius: 14rpx;
  line-height: 28rpx;
}

.pay-gift .pay-gift-content .pay-gift-list-box .pay-gift-list-item .top-title {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
  padding-top: 12rpx;
}

.pay-gift .pay-gift-content .pay-gift-list-box .pay-gift-list-item .top-title .title {
  overflow: hidden;
  font-size: 40rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #333;
  flex: 1;
}

.pay-gift .pay-gift-content .pay-gift-list-box .pay-gift-list-item .top-title .get-gift-btn {
  width: 120rpx;
  height: 40rpx;
  font-size: 22rpx;
  border-radius: 40rpx;
  text-align: center;
  color: #666;
  background: #ffe23d;
  line-height: 40rpx;
}

.pay-gift .pay-gift-content .pay-gift-list-box .pay-gift-list-item .top-title .get-gift-btn.disable {
  color: #ccc;
  background: #f9f6ff;
}

.pay-gift .pay-gift-content .pay-gift-list-box .pay-gift-list-item .top-title .get-gift-btn.purple {
  color: #7121ff;
  background: #f9f6ff;
}

.pay-gift .pay-gift-content .pay-gift-list-box .pay-gift-list-item .bottom-content {
  position: relative;
  display: flex;
  justify-content: left;
  align-items: center;
}

.pay-gift .pay-gift-content .pay-gift-list-box .pay-gift-list-item .bottom-content .gift-descript {
  display: flex;
  align-items: center;
  margin: 0 5rpx 0 0;
  padding: 0 10rpx;
  height: 34rpx;
  font-size: 22rpx;
  color: #ff751a;
  background: rgba(255, 117, 26, 0.1);
  line-height: 34rpx;
}

.pay-gift .pay-gift-content .pay-gift-list-box .pay-gift-list-item .bottom-content .gift-descript text {
  font-weight: bolder;
}

.pay-gift .pay-gift-content .pay-gift-list-box .pay-gift-list-item .bottom-content .help-icon-box {
  padding-top: 5rpx;
  padding-left: 10rpx;
  width: 34rpx;
  height: 34rpx;
  box-sizing: border-box;
}

.pay-gift .pay-gift-content .pay-gift-list-box .pay-gift-list-item .bottom-content .help-icon-box .help-icon {
  display: inline-block;
  width: 22rpx;
  height: 22rpx;
}

.pay-gift .pay-gift-content .pay-gift-list-box .pay-gift-list-item .bottom-content .grey-bg {
  margin: 0 5rpx;
  padding: 0 10rpx;
  height: 34rpx;
  font-size: 22rpx;
  color: #666;
  background: #f9f6ff;
  line-height: 34rpx;
}

.pay-gift .pay-gift-content .pay-gift-list-box .pay-gift-list-item .comic-list-box {
  position: absolute;
  bottom: 60rpx;
  left: 150rpx;
  overflow: hidden;
  padding: 24rpx 0rpx 60rpx 16rpx;
  width: 223rpx;
  max-height: 333rpx;
  border-radius: 8rpx;
  background: rgba(0, 0, 0, 0.7);
  box-sizing: border-box;
}

.pay-gift .pay-gift-content .pay-gift-list-box .pay-gift-list-item .comic-list-box .comic-list {
  overflow: auto;
  max-height: 235rpx;
}

.pay-gift .pay-gift-content .pay-gift-list-box .pay-gift-list-item .comic-list-box .comic-list view {
  overflow: hidden;
  padding-right: 16rpx;
  height: 28rpx;
  font-size: 20rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #fff;
  line-height: 28rpx;
}

.pay-gift .pay-gift-content .pay-gift-list-box .pay-gift-list-item .comic-list-box .bottom-control {
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 16rpx;
  width: 223rpx;
  height: 55rpx;
  background: #333;
  box-sizing: border-box;
}

.pay-gift .pay-gift-content .pay-gift-list-box .pay-gift-list-item .comic-list-box .bottom-control text {
  font-size: 20rpx;
  color: #fff;
}

.pay-gift .pay-gift-content .pay-gift-list-box .pay-gift-list-item .comic-list-box .bottom-control .closeBox {
  padding: 17rpx 0 17rpx 34rpx;
  width: 55rpx;
  height: 55rpx;
  box-sizing: border-box;
}

.pay-gift .pay-gift-content .pay-gift-list-box .pay-gift-list-item .comic-list-box .bottom-control .closeBox image {
  width: 20rpx;
  height: 20rpx;
  pointer-events: auto;
}

.pay-gift .btn-pay {
  position: relative;
  z-index: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 686rpx;
  height: 88rpx;
  font-size: 30rpx;
  border-radius: 44rpx;
  line-height: 88rpx;
}

.pay-gift .btn-pay.ios-not-btn {
  color: #cfc6e9;
  background: #f9f6ff;
}

.pay-gift .purchase-btn {
  color: #fff;
  background: #ff751a;
}

.pay-gift .and-no-ad-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 32rpx;
  width: 100%;
}

.pay-gift .limit-block {
  width: 100%;
  line-height: 20rpx;
  height: 40rpx;
}

.pay-gift .limit-bottom {
  position: relative;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  box-shadow: 0 -2rpx 8rpx 0 rgba(0, 0, 0, 0.04);
  box-sizing: border-box;
}

.pay-gift .limit-bottom .topic-btn {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 999;
  margin-right: 12rpx;
  width: 110rpx;
  height: 80rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, 'PingFang SC';
  font-weight: 400;
  text-align: center;
  color: #5b29f4;
  background: #fcfbff;
  line-height: 80rpx;
}

.pay-gift .limit-bottom .limit-kkb-btn {
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}

.pay-gift .limit-bottom .limit-kkb-btn text {
  font-size: 24rpx;
  font-family: PingFangSC-Medium, 'PingFang SC';
  font-weight: 500;
  color: #5d04b5;
  line-height: 30rpx;
}

.pay-gift .limit-bottom .limit-kkb-btn .arrow {
  display: inline-block;
  margin-top: 8rpx;
  margin-left: 6rpx;
  width: 10rpx;
  height: 17.5rpx;
}

.pay-gift button,
.pay-gift .invest {
  position: relative;
}

.pay-gift .origin-login {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 5;
  width: 100% !important;
  height: 100%;
  background: none !important;
}

.vip-pay-gift .purchase-btn {
  color: #fff;
  background: linear-gradient(135deg, #d100d6 0%, #6c01cf 100%);
}
